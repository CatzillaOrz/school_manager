.content-container
    .teacher-card-container-bg
        .teacher-card-bg(ng-repeat="teacher in excellentTeacherListFn.excellentTeacherList" ng-init="a=false" ng-mouseenter="a=true" ng-mouseleave="a=false")
            //.shade(ng-show="a")
            //.detail-button(ng-show="a")
            //    a.btn-detail(ui-sref="excellentteacherdetail({id:teacher.id})")
            //        | 教师详情>>
            .teacher-image
                img.img(ng-src="{{ teacher.inUrl}}" ng-if="teacher.inUrl")
                img.img(ng-src="{{'http://oli56k5b0.bkt.clouddn.com/avatar-man.png'}}" ng-if="!teacher.inUrl&&teacher.sex=='男'")
                img.img(ng-src="{{'http://oli56k5b0.bkt.clouddn.com/avatar-woman.png'}}" ng-if="!teacher.inUrl&&teacher.sex=='女'")
            .teacher-name
                span.name {{teacher.teacherName}}
                span.position {{teacher.position}}
            .teacher-detail
                | {{excellentTeacherListFn.cutHtml(teacher.introduction,50)}}
            .detail
                button.btn.btn-detail(ui-sref="excellentteacherdetail({id:teacher.id})") 查看详情

    .page(ng-if="excellentTeacherListFn.page.totalElements")
        ul.pagination-sm(uib-pagination, total-items='excellentTeacherListFn.page.totalElements',items-per-page="excellentTeacherListFn.page.pageSize" max-size='excellentTeacherListFn.page.pageSize' ng-model='excellentTeacherListFn.page.pageNumber',ng-change="excellentTeacherListFn.getBoutiqueCourseList()" boundary-link-numbers='true' rotate='false' previous-text="上一页" next-text="下一页")
