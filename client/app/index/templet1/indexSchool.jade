.indexSchool-container
    .shade
        .header.animated.fadeInDown
            azx-school-man-header(data-menu="template1Fn.isShowMenu")
        .context
            .slogin-panel(ng-show="!template1Fn.isLogin()")
                .user_signin_inner
                    .content
                        .zh-signin(ng-if="template1Fn.singinType")
                            label.signin_user(ng-init="nameFocus=false")
                                span.i.fa.fa-user(ng-class="{'active':nameFocus}")
                                input.ng-pristine.ng-untouched.ng-empty.ng-invalid.ng-invalid-required(ng-focus="nameFocus=true" ng-blur="nameFocus=false" placeholder='账号/手机号/邮箱 ', type='text' name='username', ng-trim='true', ng-keypress='template1Fn.keyPressHandle($event)', required='required', ng-model='template1Fn.form.username')
                            label.signin_user(style="margin-top:15px;" ng-init="focus=false")
                                span.i.fa.fa-lock(ng-class="{'active':focus}")
                                input.ng-pristine.ng-untouched.ng-empty.ng-invalid.ng-invalid-required(ng-focus="focus=true" ng-blur="focus=false" placeholder='请输入您的密码', type='password', name='password', required='required', ng-keypress='template1Fn.keyPressHandle($event)', ng-model='template1Fn.form.password', autocomplete='off')
                            .signin_warning
                                .signin_warning_inner.ng-binding.ng-hide(ng-show='signInError')
                            .signin_submit
                                button.signin_submit_btn.school_sigin(ng-click='template1Fn.signIn()', type='button') 登 录
                            .forget_pawd
                                a(ng-click="template1Fn.toActive()", title='激活', style="float:left;") 新生注册
                                a.school_forget(ng-click="template1Fn.forgotPassword()", title='忘记密码') 忘记密码
                        .code-signin(ng-show="!template1Fn.singinType")
                            .qrcode
                                #qrcode
                            .qrcode-error(ng-if='template1Fn.QrTimeOut' ng-click="template1Fn.refreshQRCode()")
                                img(src="https://s1.aizhixin.com/c2f24f5f-cdbe-4a98-98a8-664417f8ebea.png")
                            .qrcode-success(ng-if="signinFn.QrCode")
                                img(src="https://s1.aizhixin.com/3da69df5-5b3d-4e9c-b70e-8e79a7ec1677.png")
                            .qrcode-tipes(ng-if="template1Fn.QrCode") 扫码成功，请手机上确认！
                            .qrcode-tipes(ng-if="!template1Fn.QrCode&&!template1Fn.QrTimeOut") 请使用知新点点/知新教师手机端扫描二维码
                            .qrcode-tipes(ng-if="!template1Fn.QrCode&&template1Fn.QrTimeOut") 二维码已过期，点击刷新
                        .tab-btn(ng-click="template1Fn.singinToggle()")
                            img(src='https://s1.aizhixin.com/54841d45-f109-44e9-bc0b-07eb271ca72b.png' ng-if="template1Fn.singinType")
                            img(src='https://s1.aizhixin.com/c38c8474-822b-408e-9ede-13d5ec10d8c7.png' ng-if="!template1Fn.singinType")
            .context1
                .title1 {{'教学应用综合平台'}}
                .title2 {{'开放、共享、交互、协作的数字化教育信息管理服务'}}
            .menu
                .class-live.menu-common(ng-if="template1Fn.isShowMenu.classLive" ng-click="template1Fn.goPage(1)")
                    .content
                        img(src="https://s1.aizhixin.com/3b2358d0-1497-4f12-a803-9d5de14df74d.png")
                        div.title {{"课堂在线"}}
                        div.profile {{'教师在线备课，学生线上学习，让备课学习更简单。'}}
                .class-live-disabled.menu-common(ng-if="!template1Fn.isShowMenu.classLive" )
                    .content
                        img(src="https://s1.aizhixin.com/45e26315-f297-4d59-88b6-ea5824572a10.png")
                        div.title {{"课堂在线"}}

                .big-data.menu-common(ng-if="template1Fn.isShowMenu.showLearn" ng-click="template1Fn.goPage(6,'/schindex')")
                    .content
                        img(src="https://s1.aizhixin.com/cd01ad18-c1a2-485d-bf51-8094f8927c54.png")
                        div.title {{"学情大数据"}}
                        div.profile {{'学情深度分析，学业主动预警，大数据助力教育洞察。'}}
                .big-data-disabed.menu-common(ng-if="!template1Fn.isShowMenu.showLearn")
                    .content
                        img(src="https://s1.aizhixin.com/016cc63d-c1b3-4f6b-9332-164750d0d147.png")
                        div.title {{"学情大数据"}}

                .man-center.menu-common(ng-if="template1Fn.isShowMenu.manCenter" ng-click="template1Fn.goPage(5,'/home')")
                    .content
                        div {{"管理中心"}}
                .man-center-disabled.menu-common(ng-if="!template1Fn.isShowMenu.manCenter")
                    .content
                        div {{"管理中心"}}

                .user-center.menu-common(ng-if="template1Fn.isShowMenu.userCenter" ng-click="template1Fn.goPage(0,'/userCenter')")
                    .content
                        div {{"个人中心"}}
                .user-center-disabled.menu-common(ng-if="!template1Fn.isShowMenu.userCenter")
                    .content
                        div {{"个人中心"}}

                .pt-help.menu-common(ng-if="template1Fn.isShowMenu.ptHelp" ng-click="template1Fn.goPage(2,'/dashboard')" ng-class="{'pt-no-course':!template1Fn.isGoodGoodCourse}")
                    .content
                        div.title {{"实训协作"}}
                        div.profile {{'项目式团队建设管理 学习企业项目工作模式。'}}
                .pt-help-disabled.menu-common(ng-if="!template1Fn.isShowMenu.ptHelp" ng-class="{'pt-no-course':!template1Fn.isGoodGoodCourse}")
                    .content
                        div.title {{"实训协作"}}

                .pt.menu-common(ng-if="template1Fn.isShowMenu.pt"  ng-click="template1Fn.goPage(7,'/index')")
                    .content
                        img(src="https://s1.aizhixin.com/3cbafe15-1fcd-42f7-be30-efe48ad1a257.png")
                        div.title {{"实习实践"}}
                        div.profile {{'实习实践安全掌控，实践过程有效考核，校企协同育人。'}}
                .pt-disabled.menu-common(ng-if="!template1Fn.isShowMenu.pt")
                    .content
                        img(src="https://s1.aizhixin.com/d207dccb-944d-452e-b3df-deaa4ee7f575.png")
                        div.title {{"实习实践"}}

                .hand-school.menu-common(ng-if="template1Fn.isShowMenu.handSchool" ng-click="template1Fn.goPage(4,'/schindex')")
                    .content
                        img(src="https://s1.aizhixin.com/6d218b89-4c69-48fb-bd1f-4059cf28330d.png")
                        div.title {{"掌上校园"}}
                        div.profile {{'点点在手 说走就走'}}
                .hand-school-disabled.menu-common(ng-if="!template1Fn.isShowMenu.handSchool")
                    .content
                        img(src="https://s1.aizhixin.com/39409a13-a0d3-410e-96cf-7dc296ae4573.png")
                        div.title {{"掌上校园"}}

                .course.menu-common(ng-click="template1Fn.goPage(1,'/publicClass/list')" ng-if="template1Fn.isGoodGoodCourse&&template1Fn.isShowMenu.goodCourse")
                    .content
                        div {{"精品课程"}}
                .course-disabled.menu-common(ng-if="template1Fn.isGoodGoodCourse&&!template1Fn.isShowMenu.goodCourse")
                    .content
                        div {{"精品课程"}}

