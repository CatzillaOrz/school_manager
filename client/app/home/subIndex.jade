.home-container
    .home-content
        .content
            .quick-button(ng-repeat="data in subIndexFn.datas")
                .jarviswidget.button-content(data-widget-editbutton='false', style='', role='widget')
                    header(role='heading')
                        .jarviswidget-ctrls(role='menu')
                        span.icon-title
                        h2 {{data.title}}
                        span.jarviswidget-loader
                            i.fa.fa-refresh.fa-spin
                        div.operat(ng-click="subIndexFn.operatMenu($index)") {{data.button}}
                    div.menus(role='content')
                        a.item-menu(ng-repeat='item in data.items' ui-sref="{{item.sref}}" target="{{item.target?'_blank':''}}")
                            img.operate-sel(ng-show="item.isShow" src="{{item.selImg}}" ng-click="subIndexFn.selMenu($parent.$index,$index,$event);")
                            .img-contain
                                img(src="{{item.icon}}")
                            span {{item.title}}


