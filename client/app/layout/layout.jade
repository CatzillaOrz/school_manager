#layout
    //#pageheader(azx-header data-inverse data-redirect-url='/' data-subnav='subnav')
    #pageheader
        .azxsm-header
            .nav-fiexd-box
                .nav-container
                    div
                        a.azxlogo(href='javascript:;', ng-click='headerFn.navigate(0)')
                            span
                                div(azx-logo='')
                    ul.account(ng-if='headerFn.user')
                        li.user-menu(uib-dropdown='uib-dropdown', uib-dropdown-toggle='uib-dropdown-toggle')
                            span.user-avatar
                                img.avatar-30.img-circle(ng-src='{{headerFn.user.avatar}}')
                            span#user-name.dropdown-toggle
                                span {{headerFn.user.login | cutStr:8}}
                        li.logo-split
                        li.user-menu(uib-dropdown='uib-dropdown', uib-dropdown-toggle='uib-dropdown-toggle')
                            a(ng-click='headerFn.signOut()')
                                i.fa.fa-power-off
                                span 退出
