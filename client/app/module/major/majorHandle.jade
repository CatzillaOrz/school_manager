.college-handle-container
    .jarviswidget.jarviswidget-color-blueDark(ng-if='!handleFn.complete')
        header(role='heading')
            .jarviswidget-ctrls(role='menu')
            span.widget-icon
                i.fa.fa-table
            h2 {{handleFn.title}}
        .widget-body
            form.form-horizontal(name="majorForm")
                fieldset
                    legend {{handleFn.prompt}}
                .short-form
                    .form-group
                        .col-sm-3.control-label
                            lable.required *
                            label.text-center 选择学院：
                        .col-sm-7
                            select.form-control(ng-model="handleFn.collegeId" ui-select2="handleFn.select2Options" )
                                option(ng-repeat="college in handleFn.collegeDropList" value="{{college.id}}" selected="{{handleFn.params.collegeId==college.id?'selected':''}}") {{college.name}}
                    .form-group
                        .col-sm-3.control-label
                            lable.required *
                            label.text-center 专业名称：
                        .col-sm-7
                            input.form-control(placeholder="请填写不超过30个字专业名称" ng-model="handleFn.params.name" name="name" validator="required, maxlength=30")
                .form-actions
                    .row
                        .col-md-12
                            a.btn.btn-success(ng-click="handleFn.submit()" validation-submit="majorForm") 提交
                            a.btn.btn-default(ui-sref="majorlist") 取消
    .jarviswidget.jarviswidget-color-blueDark(ng-if='handleFn.complete')
        header(role='heading')
            span.widget-icon
                i.fa.fa-table
            h2 {{handleFn.title}}
        .finish-prompt
            h3.prompt {{handleFn.completeMSG}}
            .icon
                i.fa.fa-check-circle
        .panel-footer
            a.btn.btn-default(ui-sref="majorlist") 返回专业信息