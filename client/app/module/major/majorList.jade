.college-list-container
    #wid-id-2.jarviswidget.jarviswidget-color-blueDark.jarviswidget-sortable(data-widget-editbutton='false', style='', role='widget')
        header(role='heading')
            .jarviswidget-ctrls(role='menu')
            span.widget-icon
                i.fa.fa-table
            h2 专业信息
            span.jarviswidget-loader
                i.fa.fa-refresh.fa-spin
        // widget div
        div(role='content')
            // widget edit box
            .jarviswidget-editbox
                // This area used as dropdown edit box
            // end widget edit box
            // widget content
            .widget-body.no-padding
                #datatable_col_reorder_wrapper.dataTables_wrapper.form-inline.no-footer
                    .dt-toolbar
                        .col-xs-12.col-sm-6
                            #datatable_col_reorder_filter.dataTables_filter
                                label
                                    span.input-group-addon
                                        i.glyphicon.glyphicon-search
                                    input.form-control(type='search', placeholder='', aria-controls='datatable_col_reorder')
                        .col-sm-6.col-xs-6.hidden-xs
                            .ColVis
                                button.ColVis_Button.ColVis_MasterButton(ui-sref="majorhandle({handle:'create'})")
                                    span 新建
                    table#datatable_col_reorder.table.table-striped.table-bordered.table-hover.dataTable.no-footer(width='100%', role='grid', aria-describedby='datatable_col_reorder_info', style='width: 100%;')
                        thead
                            tr(role='row')
                                th.sorting_asc(data-hide='phone', tabindex='0', aria-controls='datatable_col_reorder', rowspan='1', colspan='1', aria-sort='ascending', aria-label='ID: activate to sort column descending', style='width: 35px;') 序号
                                th.expand.sorting(data-class='expand', tabindex='0', aria-controls='datatable_col_reorder', rowspan='1', colspan='1', aria-label='Name: activate to sort column ascending', style='width: 86px;') 专业名称
                                th.sorting(data-hide='phone', tabindex='0', aria-controls='datatable_col_reorder', rowspan='1', colspan='1', aria-label='Company: activate to sort column ascending', style='width: 195px;') 班级
                                th.sorting(data-hide='phone,tablet', tabindex='0', aria-controls='datatable_col_reorder', rowspan='1', colspan='1', aria-label='Zip: activate to sort column ascending', style='width: 94px;') 教师
                                th.sorting(data-hide='phone,tablet', tabindex='0', aria-controls='datatable_col_reorder', rowspan='1', colspan='1', aria-label='City: activate to sort column ascending', style='width: 95px;') 学生
                                th.sorting(data-hide='phone,tablet', tabindex='0', aria-controls='datatable_col_reorder', rowspan='1', colspan='1', aria-label='Date: activate to sort column ascending', style='width: 195px;') 操作
                        tbody
                            tr.odd(role='row' ng-repeat="major in majorListFn.majorList")
                                td.sorting_1 1
                                td.expand
                                    span.responsiveExpander
                                    | {{major.name}}
                                td 1-342-463-8341
                                td Et Rutrum Non Associates
                                td 35728
                                td
                                    a.handle(ui-sref="majorhandle({handle:'edit',id:major.id})")
                                        i.fa.fa-pencil-square-o
                                        span 编辑
                                    a.handle(ng-click="majorListFn.deletePrompt(major)")
                                        i.fa.fa-trash-o
                                        span 删除

                    .dt-toolbar-footer
                        .col-sm-6.col-xs-12.hidden-xs
                            #datatable_col_reorder_info.dataTables_info(role='status', aria-live='polite')
                                | Showing
                                span.txt-color-darken 1
                                |  to
                                span.txt-color-darken 10
                                |  of
                                span.text-primary 100
                                |  entries
                        .col-sm-6.col-xs-12
                            #datatable_col_reorder_paginate.dataTables_paginate.paging_simple_numbers
                                ul.pagination.pagination-sm
                                    li#datatable_col_reorder_previous.paginate_button.previous.disabled(aria-controls='datatable_col_reorder', tabindex='0')
                                        a(href='#') Previous
                                    li.paginate_button.active(aria-controls='datatable_col_reorder', tabindex='0')
                                        a(href='#') 1
                                    li.paginate_button(aria-controls='datatable_col_reorder', tabindex='0')
                                        a(href='#') 2
                                    li.paginate_button(aria-controls='datatable_col_reorder', tabindex='0')
                                        a(href='#') 3
                                    li.paginate_button(aria-controls='datatable_col_reorder', tabindex='0')
                                        a(href='#') 4
                                    li.paginate_button(aria-controls='datatable_col_reorder', tabindex='0')
                                        a(href='#') 5
                                    li#datatable_col_reorder_ellipsis.paginate_button.disabled(aria-controls='datatable_col_reorder', tabindex='0')
                                        a(href='#') …
                                    li.paginate_button(aria-controls='datatable_col_reorder', tabindex='0')
                                        a(href='#') 10
                                    li#datatable_col_reorder_next.paginate_button.next(aria-controls='datatable_col_reorder', tabindex='0')
                                        a(href='#') Next
            // end widget content
        // end widget div
