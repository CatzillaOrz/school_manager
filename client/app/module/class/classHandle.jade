.college-handle-container
    .jarviswidget.jarviswidget-color-blueDark(ng-if='!handleFn.complete')
        header(role='heading')
            span.widget-icon
                i.fa.fa-table
            h2 {{handleFn.title}}
        .widget-body
            form.form-horizontal(name="classForm")
                fieldset
                    legend {{handleFn.prompt}}
                .short-form
                    .form-group
                        label.col-sm-3.control-label * 院系名称：
                        .col-sm-7
                            input.form-control(placeholder="请填写不超过30个字院系名称",ng-model="handleFn.params.name" name="name" validator="required, maxlength=30")
                    .form-group
                        label.col-sm-3.control-label * 选择学院：
                        .col-sm-7
                            select.form-control(ng-model="handleFn.collegeId" ui-select2="'{language: zh-CN}'")
                                option(ng-repeat="college in handleFn.collegeDropList" value="{{college.id}}") {{college.name}}
                    .form-group
                        label.col-sm-3.control-label * 选择专业：
                        .col-sm-7
                            select.form-control(ng-model="handleFn.majorId" ui-select2="'{language: zh-CN}'")
                                option(ng-repeat="major in handleFn.majorDropList" value="{{major.id}}") {{major.name}}
                    .form-group
                        label.col-sm-3.control-label * 班级名称：
                        .col-sm-7
                            input.form-control(placeholder="请填写不超过30个字班级名称" ng-model="handleFn.params.name" name="name" validator="required, maxlength=30")
                .form-actions
                    .row
                        .col-md-12
                            a.btn.btn-primary(ng-click="handleFn.submit()" validation-submit="classForm") 提交
                            .speace-10
                            a.btn.btn-default(ui-sref="classlist") 取消
    .jarviswidget.jarviswidget-color-blueDark(ng-if='handleFn.complete')
        header(role='heading')
            span.widget-icon
                i.fa.fa-table
            h2 {{handleFn.title}}
        .widget-body
            .finish-prompt
                h3.prompt {{handleFn.completeMSG}}
                .icon
                    i.fa.fa-check-circle
            .form-actions
                .row
                    .col-md-12
                        a.btn.btn-default(ui-sref="classlist") 返回班级信息
