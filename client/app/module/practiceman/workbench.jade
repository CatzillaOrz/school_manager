.college-list-container
    .jarviswidget.jarviswidget-color-blueDark
        header(role='heading')
            .jarviswidget-ctrls(role='menu')
            span.widget-icon
                i.fa.fa-table
            h2 我的工作台
            span.jarviswidget-loader
                i.fa.fa-refresh.fa-spin
        .college-list-container
            div 使用流程
            #wid-id-2.tabBlock.jarviswidget.jarviswidget-color-blueDark.jarviswidget-sortable(d ata-widget-editbutton='false', style='', role='widget')
                header(role='heading')
                    ul#myTab.tabBlock-tabs.nav.nav-tabs.pull-left.in
                        li.tabBlock-tab.cursor-pointer.active
                            a(data-toggle='tab', aria-expanded='true' ng-click='layoutFn.tab=true')
                                i.fa.fa-lg.fa-calendar
                                span.hidden-mobile.hidden-tablet  第一步：导入数据
                        li.tabBlock-tab.cursor-pointer
                            a(data-toggle='tab',aria-expanded='false' ng-click='layoutFn.tab=false')
                                i.fa.fa-lg.fa-clock-o
                                span.hidden-mobile.hidden-tablet 第二步：实践教学管理
                    span.jarviswidget-loader
                        i.fa.fa-refresh.fa-spin
                // widget div
                div(role='content')
                    .tab-pane(ng-if='layoutFn.tab')
                            .step-line
                                .mt-step-col.done(ng-repeat='step in layoutFn.stepOne' style='width:16%;cursor:pointer;' ng-click='layoutFn.redirectTo(layoutFn.nav[step.tab], step)')
                                    .mt-step-number {{$index+1}}
                                    .mt-step-title.uppercase {{step.title}}
                                    .mt-step-content {{step.introduce}}
                    .tab-pane(ng-if='!layoutFn.tab')
                        .step-line
                                .mt-step-col.done(ng-repeat='step in layoutFn.stepTwo' style='width:16%;cursor:pointer;' ng-click='layoutFn.redirectTo(layoutFn.nav[step.tab], step)')
                                    .mt-step-number {{$index+1}}
                                    .mt-step-title.uppercase {{step.title}}
                                    .mt-step-content {{step.introduce}}

