.college-handle-container
    .jarviswidget.jarviswidget-color-blueDark
        header(role='heading')
            span.widget-icon
                i.fa.fa-table
            h2 {{handleFn.title}}
        .widget-body
            form.form-horizontal(name="weekTaskForm")
                fieldset
                    legend {{handleFn.prompt}}
                .md-form
                    .form-group
                        label.col-sm-3.control-label
                            span.required *
                            | 实践周：
                        .col-sm-8
                            input.form-control(placeholder="请输入实践周，例如第一周" ng-model="handleFn.params.weekNo" name="name" validator="required, maxlength=10")
                    .form-group
                        label.col-sm-3.control-label
                            span.required *
                            | 任务完成时间段：
                        .col-sm-4
                            p.input-group
                                input.form-control(type="text" pick-a-date="date" pick-a-date-options="{ format: 'yyyy-mm-dd' }"  ng-model='handleFn.params.beginDate' placeholder="请选择开始时间")
                                span.input-group-btn
                                    button.btn.btn-default(type='button')
                                        i.glyphicon.glyphicon-calendar
                        .col-sm-4
                            p.input-group
                                input.form-control(type="text" pick-a-date="date" pick-a-date-options="{ format: 'yyyy-mm-dd' }"   ng-model='handleFn.params.endDate' placeholder="请选择结束时间")
                                span.input-group-btn
                                    button.btn.btn-default(type='button')
                                        i.glyphicon.glyphicon-calendar
                    .form-group
                        label.col-sm-3.control-label
                            span.required *
                            | 任务标题：
                        .col-sm-8
                            input.form-control(placeholder="请输入任务标题" ng-model="handleFn.params.taskTitle" name="taskTitle" validator="required, maxlength=30" )

                    .form-group
                        label.col-sm-3.control-label
                            span.required *
                            | 分配实践小组：
                        .col-sm-8
                            ul.select-box
                                li.select-item(ng-repeat='group in handleFn.groupList')
                                    label.item-label {{group.gropName}}
                                        input(type='checkbox' ng-model='group.select')

                    .form-group
                        label.col-sm-3.control-label
                            span.required
                            | 备注：
                        .col-sm-8
                            input.form-control(placeholder="" ng-model="handleFn.params.remark" name="remark" validator="required, maxlength=30" )

                .form-actions
                    .row
                        .col-md-12
                            a.btn.btn-primary(ng-click="handleFn.submit()" validation-submit="weekTaskForm") 确定
                            .speace-10
                            a.btn.btn-default(ui-sref="practicetasklist") 取消



