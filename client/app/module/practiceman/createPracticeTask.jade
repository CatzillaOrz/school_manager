.college-handle-container
    .jarviswidget.jarviswidget-color-blueDark
        header(role='heading')
            span.widget-icon
                i.fa.fa-table
            h2 {{handleFn.title}}
        .widget-body
            form.form-horizontal(name="weekTaskForm")
                fieldset
                    legend {{handleFn.prompt}}
                .md-form
                    .form-group
                        label.col-sm-3.control-label
                            span.required *
                            | 所属课程：
                        .col-sm-7
                            select.form-control(placeholder="请填选择课程" ng-model="handleFn.params.weekTaskId", ng-change='handleFn.computeSelected()')
                                option(value='{{ep.id}}', ng-repeat='ep in handleFn.weekTaskList', ng-selected='ep.id == handleFn.params.weekTaskId') {{ep.taskTitle}}
                    //.form-group
                        label.col-sm-3.control-label
                            span.required *
                            | 任务完成时间段：
                        .col-sm-4
                            p.input-group
                                .input-append.date.datepicker.datepicker-basic.no-padding(data-date='', data-date-format='yyyy-mm-dd' b-datepicker)
                                    input.form-control(size='16', ng-disabled='true' name="dateStart" placeholder='请选择开始日期' type='text' ng-model="handleFn.params.beginDate" validator="required")
                                    span.add-on
                                        i.icon-calendar.glyphicon.glyphicon-calendar
                            //p.input-group
                                input.form-control(type="text" pick-a-date="date" pick-a-date-options="{ format: 'yyyy-mm-dd' }"  ng-model='handleFn.params.beginDate' placeholder="请选择开始时间")
                                span.input-group-btn
                                    button.btn.btn-default(type='button')
                                        i.glyphicon.glyphicon-calendar
                        .col-sm-4
                            p.input-group
                                .input-append.date.datepicker.datepicker-basic.no-padding(data-date='', data-date-format='yyyy-mm-dd' b-datepicker)
                                    input.form-control(size='16', ng-disabled='true' name="dateEnd" placeholder='请选择结束日期' type='text' ng-model="handleFn.params.endDate" validator="required")
                                    span.add-on
                                        i.icon-calendar.glyphicon.glyphicon-calendar
                            //p.input-group
                                input.form-control(type="text" pick-a-date="date" pick-a-date-options="{ format: 'yyyy-mm-dd' }"   ng-model='handleFn.params.endDate' placeholder="请选择结束时间")
                                span.input-group-btn
                                    button.btn.btn-default(type='button')
                                        i.glyphicon.glyphicon-calendar
                    .form-group
                        label.col-sm-3.control-label
                            span.required *
                            | 任务名称：
                        .col-sm-8
                            input.form-control(placeholder="请输入任务标题" ng-model="handleFn.params.taskName" name="taskTitle" maxlength="30" validator="required, maxlength=30" )
                    .form-group
                        label.col-sm-3.control-label
                            span
                            |任务内容：
                        .col-sm-9
                            textarea.form-control(rows='8' placeholder="请填写不超过300个字课程描述" ng-model="handleFn.params.description" name="courseDesc"  validator="maxlength=300")
                    //.form-group
                        label.col-sm-3.control-label
                            span.required *
                            | 分配实践小组：
                        .col-sm-8
                            ul.select-box
                                li.select-item(ng-repeat='(id,group) in handleFn.groupList')
                                    label.item-label {{group.gropName}}
                                        input(type='checkbox' ng-model='group.select')

                    .form-group
                        label.col-sm-3.control-label
                            | 学时：
                        .col-sm-8
                            input.form-control(placeholder="" ng-model="handleFn.params.classHour" name="remark" maxlength="30" validator="maxlength=30" )

                .form-actions
                    .row
                        .col-md-12
                            a.btn.btn-primary(ng-click="handleFn.submit()" validation-submit="weekTaskForm") 确定
                            .speace-10
                            a.btn.btn-default(ui-sref="practicetasklist") 取消



