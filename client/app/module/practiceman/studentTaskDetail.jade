.college-list-container
    .jarviswidget.jarviswidget-color-blueDark
        header(role='heading')
            .jarviswidget-ctr.table-no-borderls(role='menu')
            span.widget-icon
                i.fa.fa-table
            h2 实践任务详情
            span.jarviswidget-loader
                i.fa.fa-refresh.fa-spin
        // widget div
        div(role='content')
            // widget edit box
            .jarviswidget-editbox
                // This area used as dropdown edit box
            // end widget edit box
            // widget content
            .widget-body.no-padding
                #datatable_col_reorder_wrapper.dataTables_wrapper.form-inline.no-footer
                    .dt-toolbar
                        .col-xs-12.col-sm-6
                            //#datatable_col_reorder_filter.dataTables_filter
                                label
                                    input.form-contr.table-no-borderol(type='search', placeholder='按企业名查询', aria-contr.table-no-borderols='datatable_col_reorder' ng-model="practiceGroupMan.queryOption.name", my-enter="practiceGroupMan.getpracticeGroupMan()")
                                    span.input-group-addon.pull-right.cursor-pointer.search-btn(ng-click="practiceGroupMan.getpracticeGroupMan()")
                                        i.glyphicon.glyphicon-search
                        //.col-sm-6.col-xs-6.hidden-xs
                            .ColVis
                                button.btn.btn-primary(ui-sref="enterpriseEdit")
                                    span 新建
                                //- button.btn.btn-primary(type='button' ng-click="practiceGroupMan.openImpBatch()")
                                    span 批量导入
                    table#datatable_col_reorder.table.table-hover.dataTable.no-footer(width='100%', role='grid', aria-describedby='datatable_col_reorder_info', style='width: 100%;')
                        tbody
                            tr.table-no-border
                                td.col-sm-2 姓名：
                                td.col-sm-10 {{stdFn.studentName}}
                            tr.table-no-border
                                td.col-sm-2.no-border 学号：
                                td.no-border.col-sm-10 {{stdFn.jobNum}}
                            tr.table-no-border
                                td.col-sm-2.no-border 所属课程：
                                td.no-border.col-sm-10 {{stdFn.stDetail.weekTaskName}}
                            tr.table-no-border
                                td.col-sm-2.no-border 任务名称：
                                td.no-border.col-sm-10(style="max-width: 600px;") {{stdFn.stDetail.taskName}}
                            tr.table-no-border
                                td.col-sm-2.no-border 任务内容：
                                td.no-border.col-sm-10(style="min-height: 100px;")
                                    div(style="max-width: 600px;") {{stdFn.stDetail.description}}
                                    .col-sm-8
                                        ul(style='list-style:none;display:inline-flex;')
                                            li(ng-repeat='pic in stdFn.stDetail.taskFileList')
                                                img(style="width:100px;height:100px;margin-right:10px;", ng-src='{{pic.srcUrl}}')
                            tr.table-no-border
                                td.col-sm-2.no-border 补充内容：
                                td.no-border.col-sm-10(style="max-width: 600px;") {{stdFn.stDetail.describe}}
                            tr.table-no-border
                                td.col-sm-2.no-border 学时：
                                td.no-border.col-sm-10 {{stdFn.stDetail.classHour}}
                            tr.table-no-border
                                td.col-sm-2.no-border 时间：
                                td.no-border.col-sm-10(style="height: 100px;") {{stdFn.stDetail.beginDate}} 至 {{stdFn.stDetail.deadLine}}
                            tr.table-no-border
                                td.col-sm-2 任务完成详情：
                                td.col-sm-10
                                    div(style="max-width: 600px;") {{stdFn.stDetail.resultDescription}}
                                    .col-sm-8
                                        ul(style='list-style:none;display:inline-flex;')
                                            li(ng-repeat='pic in stdFn.stDetail.stuFileList')
                                                img(style="width:100px;height:100px;margin-right:10px;", ng-src='{{pic.srcUrl}}')
                            tr.table-no-border
                                td.col-sm-2.no-border 完成状态：
                                td.no-border.col-sm-10 {{stdFn.taskStatus(stdFn.stDetail.stuTaskStatus)}}
                            tr.table-no-border
                                td.col-sm-2.no-border 评分：
                                td.no-border.col-sm-10 {{stdFn.stDetail.taskScore}}
                            tr.table-no-border
                                td.col-sm-2.no-border 评语：
                                td.no-border.col-sm-10 
                                    div(style="max-width: 600px;") {{stdFn.stDetail.taskAdvice}}
                                    .col-sm-8
                                        ul(style='list-style:none;display:inline-flex;')
                                            li(ng-repeat='pic in stdFn.stDetail.reviewFileList')
                                                img(style="width:100px;height:100px;margin-right:10px;", ng-src='{{pic.srcUrl}}')


                    .dt-toolbar-footer
                        .col-sm-6.col-xs-6.hidden-xs
                            .ColVis
                                button.btn.btn-primary(ui-sref="missionDetail({id: stdFn.mId})")
                                    span 返回
                                button.btn.btn-primary(ng-click="stdFn.exportPDF()")
                                    span 打印
