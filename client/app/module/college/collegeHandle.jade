.college-handle-container
    .jarviswidget.jarviswidget-color-blueDark(ng-if='!handleFn.complete')
        header(role='heading')
            span.widget-icon
                i.fa.fa-table
            h2 {{handleFn.title}}
        .widget-body
            //h3.prompt {{handleFn.prompt}}
            form.form-horizontal
                fieldset
                    legend {{handleFn.prompt}}
                .short-form
                    .form-group
                        label.col-sm-3.control-label 院系名称：
                        .col-sm-7
                            input.form-control(placeholder="填写院系名称",ng-model="handleFn.params.name")
                .form-actions
                    .row
                        .col-md-12
                            a.btn.btn-primary(ng-click="handleFn.submit()") 提交
                            a.btn.btn-default(ui-sref="collegelist") 取消

        //.panel-footer
            a.btn.btn-primary(ng-click="handleFn.submit()") 提交
            a.btn.btn-default(ui-sref="collegelist") 取消
    .jarviswidget.jarviswidget-color-blueDark(ng-if='handleFn.complete')
        header(role='heading')
            span.widget-icon
                i.fa.fa-table
            h2 {{FinishFn.title}}
        .finish-prompt
            h3.prompt {{FinishFn.completeMSG}}
            .icon
                i.fa.fa-check-circle
        .panel-footer
            a.btn.btn-default(ui-sref="collegelist") 返回院系信息