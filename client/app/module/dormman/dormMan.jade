.college-list-container
    .jarviswidget.jarviswidget-color-blueDark
        header(role='heading')
            .jarviswidget-ctrls(role='menu')
            span.widget-icon
                i.fa.fa-table
            h2 宿舍信息
            span.jarviswidget-loader
                i.fa.fa-refresh.fa-spin
        // widget div
        div(role='content')
            // widget edit box
            .jarviswidget-editbox
                // This area used as dropdown edit box
            // end widget edit box
            // widget content
            .widget-body.no-padding
                #datatable_col_reorder_wrapper.dataTables_wrapper.form-inline.no-footer
                    .dt-toolbar
                        .col-md-12.padding-bottom-10
                            form.form-line
                                .col-md-1
                                    label.control-label 宿舍楼：
                                .col-md-10
                                    span.dorms-flow(ng-class="{'select-dorm': dormMan.isContain(building)}" ng-click="dormMan.checkBuild(building)" ng-repeat="building in dormMan.builds") {{building.name}}
                                        i.fa.fa-times.close-pic(aria-hidden="true" ng-if="dormMan.isContain(building)" ng-click="dormMan.removeSelectBuild(building, $event);")
                                //.col-md-1
                                    span 更多
                        .col-md-12.padding-bottom-10.padding-top-10(ng-if="dormMan.checkedBuilds.length==1")
                            form.form-line(ng-if="dormMan.checkedBuilds[0].floorType==20")
                                .col-md-1
                                    label.control-label 所在单元：
                                .col-md-10
                                    span.dorms-flow(ng-class="{'select-dorm': dormMan.isFloorUnit(unit, 'unit')}" ng-click="dormMan.checkFloorUnit(unit, 'unit')" ng-repeat="unit in dormMan.currentBuildUnit") {{unit + " 单元"}}
                                        i.fa.fa-times.close-pic(aria-hidden="true" ng-if="dormMan.isFloorUnit(unit, 'unit')" ng-click="dormMan.removeFloorUnit(unit, 'unit', $event);")
                        .col-md-12.padding-bottom-10.padding-top-10(ng-if="dormMan.checkedBuilds[0].floorType==10||(dormMan.checkedBuilds[0].floorType==20&&dormMan.checkedUnits.length<2)")
                            form.form-line
                                .col-md-1
                                    label.control-label 所在楼层：
                                .col-md-10
                                    span.dorms-flow(ng-class="{'select-dorm': dormMan.isFloorUnit(floor, 'floor')}" ng-click="dormMan.checkFloorUnit(floor, 'floor')" ng-repeat="floor in dormMan.currentBuildFloors") {{floor + "楼"}}
                                        i.fa.fa-times.close-pic(aria-hidden="true" ng-if="dormMan.isFloorUnit(floor, 'floor')" ng-click="dormMan.removeFloorUnit(floor, 'floor', $event);")
                                .col-md-1
                                    span 更多
                        .col-md-12.padding-bottom-10.padding-top-10
                            form.form-line
                                .form-group.col-md-4
                                    label.control-label 是否满员：
                                    select.form-control(type='text', ng-model="dormMan.params.full"  ng-options="obj.value as obj.name for obj in dormMan.isFullArr")
                                .form-group.col-md-4
                                    label.control-label 开放状态：
                                    select.form-control(type='text', ng-model="dormMan.params.open"  ng-options="obj.value as obj.name for obj in dormMan.isOpenArr")
                                .form-group.col-md-4
                                    label.control-label 已分配专业：
                                    select.form-control(type='text', ng-model="dormMan.params.profId"  ng-options="obj.value as obj.name for obj in dormMan.distedMajor")

                        .col-md-12.padding-bottom-10.padding-top-10
                            .col-md-4
                                #datatable_col_reorder_filter.dataTables_filter(style="float:left;width:auto;")
                                    label
                                        input.form-control(type='search', placeholder='按宿舍号查询', aria-controls='datatable_col_reorder' ng-model="dormMan.params.no", my-enter="dormMan.getDorms()")
                                        span.input-group-addon.pull-right.cursor-pointer.search-btn(ng-click="dormMan.getDorms()")
                                            i.glyphicon.glyphicon-search
                            .col-md-8
                                .ColVis
                                    button.btn.btn-primary(ui-sref="dormedit")
                                        span 新建
                                    //button.btn.btn-primary()
                                        span 批量导入
                                    button.btn.btn-primary(ng-click="dormMan.openDorm()")
                                        span 批量开放
                                    button.btn.btn-primary(ng-click="dormMan.batchClose()")
                                        span 批量关闭
                    table#datatable_col_reorder.table.table-striped.table-bordered.table-hover.dataTable.no-footer(width='100%', role='grid', aria-describedby='datatable_col_reorder_info', style='width: 100%;')
                        thead
                            tr(role='row')
                                th.sorting_asc(data-hide='phone', tabindex='0', aria-controls='datatable_col_reorder', rowspan='1', colspan='1', aria-sort='ascending', aria-label='ID: activate to sort column descending', style='width: 35px;')
                                    input(style="width:auto!important" type="checkbox" ng-click="dormMan.checkAll()" ng-checked="dormMan.checkAllRecord" ng-model="dormMan.checkAllRecord")
                                    | 全选
                                th.expand.sorting(data-class='expand', tabindex='0', aria-controls='datatable_col_reorder', rowspan='1', colspan='1', aria-label='Name: activate to sort column ascending', style='width: 80px;') 宿舍楼栋
                                th.sorting(tabindex='0', aria-controls='datatable_col_reorder', rowspan='1', colspan='1', aria-label='Phone: activate to sort column ascending', style='width: 80px;') 单元号
                                th.sorting(tabindex='0', aria-controls='datatable_col_reorder', rowspan='1', colspan='1', aria-label='Phone: activate to sort column ascending', style='width: 80px;') 楼层
                                th.sorting(tabindex='0', aria-controls='datatable_col_reorder', rowspan='1', colspan='1', aria-label='Phone: activate to sort column ascending', style='width: 80px;') 宿舍号
                                th.sorting(tabindex='0', aria-controls='datatable_col_reorder', rowspan='1', colspan='1', aria-label='Phone: activate to sort column ascending', style='width: 80px;') 总床位数
                                th.sorting(tabindex='0', aria-controls='datatable_col_reorder', rowspan='1', colspan='1', aria-label='Phone: activate to sort column ascending', style='width: 80px;') 空床位数
                                th.sorting(tabindex='0', aria-controls='datatable_col_reorder', rowspan='1', colspan='1', aria-label='Phone: activate to sort column ascending', style='width: 80px;') 开放状态
                                th.sorting(data-hide='phone,tablet', tabindex='0', aria-controls='datatable_col_reorder', rowspan='1', colspan='1', aria-label='Date: activate to sort column ascending', style='width: 200px;') 操作
                        tbody
                            tr.odd(role='row' ng-repeat="record in dormMan.records")
                                td.sorting_1
                                    input(type="checkbox"  ng-click="dormMan.selDist($index)" ng-checked="record.check" ng-model="record.check")
                                td {{record.floorName}}
                                td {{record.unitNo?(record.unitNo + "单元") : '--'}}
                                td {{record.floorNo?(record.floorNo + "层") : '--'}}
                                td {{record.no}}
                                td {{record.beds}}
                                td {{record.emBeds}}
                                td {{record.open ? "开启" : "关闭"}}
                                td
                                    a.handle(ui-sref="dormedit({id: record.roomId})")
                                        i.fa.fa-pencil-square-o
                                        span 编辑
                                    a.handle(ng-click="dormMan.deletePrompt(record)")
                                        i.fa.fa-trash-o
                                        span 删除
                                    a.handle(ng-if="!record.open" ng-click="dormMan.closeDormPrompt(record)")
                                        i.fa.fa-pencil-square-o
                                        span 关闭
                                    //a.handle(ng-if="!record.open" ng-click="dormMan.openDorm(record)")
                                        i.fa.fa-pencil-square-o
                                        span 开启
                                    a.handle(ng-if="record.open" ui-sref="dormbuildingedit({id: record.id})")
                                        i.fa.fa-pencil-square-o
                                        span 学生明细


                    .dt-toolbar-footer
                        .col-sm-6.col-xs-12.hidden-xs
                            #datatable_col_reorder_info.dataTables_info(role='status', aria-live='polite')
                                | 显示第
                                span.txt-color-darken {{dormMan.page.totalElements==0?0:(((dormMan.page.pageNumber)-1)*dormMan.page.pageSize+1)}}
                                |  到
                                span.txt-color-darken {{((dormMan.page.pageNumber==0?dormMan.page.pageNumber+1:dormMan.page.pageNumber)-1)*dormMan.page.pageSize+dormMan.records.length}}
                                |  条 总共
                                span.text-primary {{dormMan.page.totalElements}}
                                |  条记录
                        .col-sm-6.col-xs-12
                            #datatable_col_reorder_paginate.dataTables_paginate.paging_simple_numbers
                                ul.pagination-sm(uib-pagination, total-items='dormMan.page.totalElements', max-size='dormMan.page.pageSize' ng-model='dormMan.page.pageNumber',ng-change="dormMan.getDormBuildings()" boundary-link-numbers='true' items-per-page="dormMan.page.pageSize" rotate='false' previous-text="<" next-text=">")
    //-  开启宿舍弹出框
    script(type='text/ng-template',id='publishDialog')
        .container-fluid
            .dialog-title
                h2 发布设置
            .dialog-body
                form.form-horizontal(role="form" name="form" novalidate)
                    .form-group
                        label.col-sm-3.control-label
                            span 已选宿舍数量:：
                        .col-sm-6 {{dormMan.dormAssign.roomIds.length}}
                    .form-group
                        label.col-sm-3.control-label
                            span.required *
                            | 分配给专业：
                        .col-sm-6
                            select.form-control(ng-model="dormMan.dormAssign.profId" ng-options="obj.id as obj.name for obj in dormMan.majorLists")
                            //span.text-danger(ng-show="dormMan.verifyObj.teacher === false") 请选择教师
                    .form-group
                        label.col-sm-3.control-label
                            span.required *
                            | 分配给性别：
                        .col-sm-6
                            label.radio-inline
                                input(type="radio" name="type"  ng-model="dormMan.dormAssign.sexType" value="10" )
                                | 男
                            label.radio-inline
                                input(type="radio" name="type"  ng-model="dormMan.dormAssign.sexType" value="20" )
                                | 女
                    .form-group
                        .col-sm-6
                            button.btn.btn-primary(ng-click="dormMan.distDorm()") 确定发布
                            button.btn.btn-default(ng-click="closeThisDialog(0)" style="margin-left:20px") 取消