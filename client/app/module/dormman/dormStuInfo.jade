.college-list-container
    .jarviswidget.jarviswidget-color-blueDark
        header(role='heading')
            .jarviswidget-ctrls(role='menu')
            span.widget-icon
                i.fa.fa-table
            h2 学生明细
            span.jarviswidget-loader
                i.fa.fa-refresh.fa-spin
        // widget div
        div(role='content')
            // widget edit box
            .jarviswidget-editbox
                // This area used as dropdown edit box
            // end widget edit box
            // widget content
            .widget-body.no-padding
                #datatable_col_reorder_wrapper.dataTables_wrapper.form-inline.no-footer
                    //.dt-toolbar
                        h2 学生明细
                    table#datatable_col_reorder.table.table-striped.table-bordered.table-hover.dataTable.no-footer(width='100%', role='grid', aria-describedby='datatable_col_reorder_info', style='width: 100%;')
                        thead
                            tr(role='row')
                                th.sorting_asc(data-hide='phone', tabindex='0', aria-controls='datatable_col_reorder', rowspan='1', colspan='1', aria-sort='ascending', aria-label='ID: activate to sort column descending', style='width: 35px;') 序号
                                th.expand.sorting(data-class='expand', tabindex='0', aria-controls='datatable_col_reorder', rowspan='1', colspan='1', aria-label='Name: activate to sort column ascending', style='width: 86px;') 姓名
                                th.sorting(tabindex='0', aria-controls='datatable_col_reorder', rowspan='1', colspan='1', aria-label='Phone: activate to sort column ascending', style='width: 100px;') 学号
                                th.sorting(tabindex='0', aria-controls='datatable_col_reorder', rowspan='1', colspan='1', aria-label='Phone: activate to sort column ascending', style='width: 138px;') 院系
                                th.sorting(tabindex='0', aria-controls='datatable_col_reorder', rowspan='1', colspan='1', aria-label='Phone: activate to sort column ascending', style='width: 138px;') 专业
                                th.sorting(tabindex='0', aria-controls='datatable_col_reorder', rowspan='1', colspan='1', aria-label='Phone: activate to sort column ascending', style='width: 138px;') 班级
                                th.sorting(tabindex='0', aria-controls='datatable_col_reorder', rowspan='1', colspan='1', aria-label='Phone: activate to sort column ascending', style='width: 138px;') 手机号
                                th.sorting(tabindex='0', aria-controls='datatable_col_reorder', rowspan='1', colspan='1', aria-label='Phone: activate to sort column ascending', style='width: 138px;') 所在床位
                                //th.sorting(data-hide='phone,tablet', tabindex='0', aria-controls='datatable_col_reorder', rowspan='1', colspan='1', aria-label='Date: activate to sort column ascending', style='width: 195px;') 操作
                        tbody
                            tr.odd(role='row' ng-repeat="record in dormStuInfo.records")
                                td.sorting_1 {{$index+1 + ((dormStuInfo.page.pageNumber==0?dormStuInfo.page.pageNumber+1:dormStuInfo.page.pageNumber)-1)*dormStuInfo.page.pageSize}}
                                td {{record.name}}
                                td {{record.floorType == 10 ? "普通型" : "套间型"}}
                                td {{record.floorNum}}
                                td {{record.floorDesc}}
                                td {{record.floorType == 10 ? "普通型" : "套间型"}}
                                td {{record.floorNum}}
                                td {{record.floorDesc}}
                                //td
                                    a.handle(ui-sref="dormbuildingedit({id: record.id})")
                                        i.fa.fa-pencil-square-o
                                        span 编辑
                                    a.handle(ng-click="dormStuInfo.deletePrompt(record)")
                                        i.fa.fa-trash-o
                                        span 删除

                    .dt-toolbar-footer
                        .col-sm-6.col-xs-12.hidden-xs
                            #datatable_col_reorder_info.dataTables_info(role='status', aria-live='polite')
                                | 显示第
                                span.txt-color-darken {{dormStuInfo.page.totalElements==0?0:(((dormStuInfo.page.pageNumber)-1)*dormStuInfo.page.pageSize+1)}}
                                |  到
                                span.txt-color-darken {{((dormStuInfo.page.pageNumber==0?dormStuInfo.page.pageNumber+1:dormStuInfo.page.pageNumber)-1)*dormStuInfo.page.pageSize+dormStuInfo.records.length}}
                                |  条 总共
                                span.text-primary {{dormStuInfo.page.totalElements}}
                                |  条记录
                        .col-sm-6.col-xs-12
                            #datatable_col_reorder_paginate.dataTables_paginate.paging_simple_numbers
                                ul.pagination-sm(uib-pagination, total-items='dormStuInfo.page.totalElements', max-size='dormStuInfo.page.pageSize' ng-model='dormStuInfo.page.pageNumber',ng-change="dormStuInfo.getDormBuildings()" boundary-link-numbers='true' items-per-page="dormStuInfo.page.pageSize" rotate='false' previous-text="<" next-text=">")
