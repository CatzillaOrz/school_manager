.college-list-container
    #wid-id-2.jarviswidget.jarviswidget-color-blueDark.jarviswidget-sortable.margin-bottom0-eduman(data-widget-editbutton='false', style='', role='widget')
        header(role='heading')
            .jarviswidget-ctrls(role='menu')
            span.widget-icon
                i.fa.fa-table
            h2 添加节日
            span.jarviswidget-loader
                i.fa.fa-refresh.fa-spin
        // widget div
        div(role='content')
            .widget-body.no-padding(style="min-height:auto!important")
                .col-md-12.padding-bottom-10.padding-top-10
                    .col-md-12.padding-bottom-10.padding-top-10
                        form.form-horizontal(name="majorForm")
                            fieldset
                                legend(style="color:red") {{'说明：本功能添加节假日记录，在生成的节假日期间没有课表，不生成点名签到信息'}}
                            .short-form(style="min-height:auto;")
                                .form-group
                                    label.col-sm-3.control-label
                                        span.required *
                                        | 节日名称：
                                    .col-sm-7
                                        input.form-control(placeholder="请填写不超过50个字节日名称" ng-model="Holiday.entity.name" name="name" validator="required, maxlength=50")
                                .form-group
                                    label.col-sm-3.control-label
                                        span.required *
                                        | 开始日期：
                                    .col-sm-7
                                        .input-append.date.datepicker.datepicker-basic.no-padding(data-date='', data-date-format='yyyy-mm-dd' b-datepicker)
                                            input.form-control(size='16', ng-disabled='true' name="dateStart" placeholder='请选择开始日期' type='text' ng-model="Holiday.entity.startDate" validator="required")
                                            span.add-on
                                                i.icon-calendar.glyphicon.glyphicon-calendar
                                .form-group
                                    label.col-sm-3.control-label
                                        span.required *
                                        | 结束日期：
                                    .col-sm-7
                                        .input-append.date.datepicker.datepicker-basic.no-padding(data-date='', data-date-format='yyyy-mm-dd' b-datepicker)
                                            input.form-control(size='16', ng-disabled='true' name="dateEnd" placeholder='请选择结束日期' type='text' ng-model="Holiday.entity.endDate" validator="required")
                                            span.add-on
                                                i.icon-calendar.glyphicon.glyphicon-calendar
                                .form-group
                                    label.col-sm-3.control-label
                                        span.required *
                                        | 学期：
                                    .col-sm-7
                                        select#ddd.select2.form-control(ng-model="Holiday.entity.semesterId" ui-select2="Holiday.select2SemesterOptions()" )
                                            option(value="{{semester.id}}" ng-repeat="semester in Holiday.schoolYearDropList") {{semester.name}}
                            .form-actions
                                .row
                                    .col-md-12
                                        a.btn.btn-primary(ng-click="Holiday.submit()" validation-submit="majorForm") 保存
                                        .speace-10
                                        //a.btn.btn-default(ui-sref="holidayman") 取消
    #wid-id-1.jarviswidget.jarviswidget-color-blueDark
        header(role='heading')
            .jarviswidget-ctrls(role='menu')
            span.widget-icon
                i.fa.fa-table
            h2 节日列表
            span.jarviswidget-loader
                i.fa.fa-refresh.fa-spin
        div(role='content')
            .widget-body.no-padding(style="position: initial!important")
                #datatable_col_reorder_wrapper1.dataTables_wrapper.form-inline.no-footer
                    .dt-toolbar
                        //.col-xs-12.col-sm-6
                            #datatable_col_reorder_filter.dataTables_filter
                                label
                                    input.form-control(type='search', placeholder='按院系查询', aria-controls='datatable_col_reorder' ng-model="collegeListFn.params.name")
                                    span.input-group-addon.pull-right.cursor-pointer.search-btn(ng-click="collegeListFn.getCollegeList()")
                                        i.glyphicon.glyphicon-search
                        //.col-sm-6.col-xs-6.hidden-xs
                            .ColVis
                                button.btn.btn-primary(ui-sref="editholiday")
                                    span 新建
                    table#datatable_col_reorder.table.table-striped.table-bordered.table-hover.dataTable.no-footer(width='100%', role='grid', aria-describedby='datatable_col_reorder_info', style='width: 100%;')
                        thead
                            tr(role='row')
                                th.sorting_asc(data-hide='phone', tabindex='0', aria-controls='datatable_col_reorder', rowspan='1', colspan='1', aria-sort='ascending', aria-label='ID: activate to sort column descending', style='width: 35px;') 序号
                                th.expand.sorting(data-class='expand', tabindex='0', aria-controls='datatable_col_reorder', rowspan='1', colspan='1', aria-label='Name: activate to sort column ascending', style='width: 86px;') 节日名称
                                th.sorting(data-hide='phone', tabindex='0', aria-controls='datatable_col_reorder', rowspan='1', colspan='1', aria-label='Company: activate to sort column ascending', style='width: 195px;') 开始日期
                                th.sorting(data-hide='phone', tabindex='0', aria-controls='datatable_col_reorder', rowspan='1', colspan='1', aria-label='Company: activate to sort column ascending', style='width: 195px;') 结束日期
                                th.sorting(data-hide='phone,tablet', tabindex='0', aria-controls='datatable_col_reorder', rowspan='1', colspan='1', aria-label='Date: activate to sort column ascending', style='width: 195px;') 操作
                        tbody
                            tr.odd(role='row' ng-repeat="record in Holiday.records")
                                td.sorting_1 {{$index+1 + ((Holiday.page.pageNumber==0?Holiday.page.pageNumber+1:Holiday.page.pageNumber)-1)*10}}
                                td {{record.name}}
                                td  {{record.startDate}}
                                td  {{record.endDate}}
                                td
                                    //a.handle(ui-sref="editholiday({id: record.id})")
                                        i.fa.fa-pencil-square-o
                                        span 编辑
                                    a.handle(ng-click="Holiday.delTip(record)")
                                        i.fa.fa-trash-o
                                        span 删除

                    .dt-toolbar-footer
                        .col-sm-6.col-xs-12.hidden-xs
                            #datatable_col_reorder_info.dataTables_info(role='status', aria-live='polite')
                                | 显示第
                                span.txt-color-darken {{Holiday.page.totalElements==0?0:(((Holiday.page.pageNumber)-1)*Holiday.page.pageSize+1)}}
                                |  到
                                span.txt-color-darken {{((Holiday.page.pageNumber==0?Holiday.page.pageNumber+1:Holiday.page.pageNumber)-1)*Holiday.page.pageSize+Holiday.records.length}}
                                |  条 总共
                                span.text-primary {{Holiday.page.totalElements}}
                                |  条记录
                        .col-sm-6.col-xs-12
                            #datatable_col_reorder_paginate.dataTables_paginate.paging_simple_numbers
                                ul.pagination-sm(uib-pagination, total-items='Holiday.page.totalElements', max-size='Holiday.page.pageSize' ng-model='Holiday.page.pageNumber',ng-change="Holiday.getHolidayList()" boundary-link-numbers='true' items-per-page="Holiday.page.pageSize" rotate='false' previous-text="<" next-text=">")
                    