.college-list-container.logo-container
    .jarviswidget.jarviswidget-color-blueDark.jarviswidget-sortable(ng-if="!hotMajorFn.isSetMajor")
        header(role='heading')
            .jarviswidget-ctrls(role='menu')
            span.widget-icon
                i.fa.fa-table
            h2 热门专业列表
            span.jarviswidget-loader
                i.fa.fa-refresh.fa-spin
        // widget div
        div(role='content')
            // widget edit box
            .jarviswidget-editbox
                // This area used as dropdown edit box
            // end widget edit box
            // widget content
            .widget-body.no-padding
                #datatable_col_reorder_wrapper.dataTables_wrapper.form-inline.no-footer
                    .dt-toolbar
                        .col-xs-12.col-sm-6
                            #datatable_col_reorder_filter.dataTables_filter
                                label
                                    input.form-control(type='search', placeholder='按专业名称查询', aria-controls='datatable_col_reorder' ng-model="hotMajorFn.params.name")
                                    span.input-group-addon.pull-right.cursor-pointer.search-btn(ng-click="hotMajorFn.getMajorList()")
                                        i.glyphicon.glyphicon-search
                        .col-sm-6.col-xs-6.hidden-xs
                            .ColVis
                                button.btn.btn-primary(ng-click="hotMajorFn.setMajorToggle()")
                                    span 设置
                    table#datatable_col_reorder.table.table-striped.table-bordered.table-hover.dataTable.no-footer(width='100%', role='grid', aria-describedby='datatable_col_reorder_info', style='width: 100%;')
                        thead
                            tr(role='row')
                                th.sorting_asc(data-hide='phone', tabindex='0', aria-controls='datatable_col_reorder', rowspan='1', colspan='1', aria-sort='ascending', aria-label='ID: activate to sort column descending', style='width: 35px;') 序号
                                th.expand.sorting(data-class='expand', tabindex='0', aria-controls='datatable_col_reorder', rowspan='1', colspan='1', aria-label='Name: activate to sort column ascending', style='width: 86px;') 专业名称
                                th.sorting(data-hide='phone', tabindex='0', aria-controls='datatable_col_reorder', rowspan='1', colspan='1', aria-label='Company: activate to sort column ascending', style='width: 195px;') 学院
                                th.sorting(data-hide='phone', tabindex='0', aria-controls='datatable_col_reorder', rowspan='1', colspan='1', aria-label='Company: activate to sort column ascending', style='width: 195px;') 创建时间
                                th.sorting(data-hide='phone,tablet', tabindex='0', aria-controls='datatable_col_reorder', rowspan='1', colspan='1', aria-label='Date: activate to sort column ascending', style='width: 195px;') 操作
                        tbody
                            tr.odd(role='row' ng-repeat="major in hotMajorFn.majorList")
                                td.sorting_1 {{$index+1 + ((hotMajorFn.page.pageNumber==0?hotMajorFn.page.pageNumber+1:hotMajorFn.page.pageNumber)-1)*10}}
                                td.expand
                                    span.responsiveExpander
                                    | {{major.name}}
                                td  {{major.collegeName}}
                                td  {{major.createdDate}}
                                td
                                    a.handle(ui-sref="majorEdit({id:major.id})")
                                        i.fa.fa-pencil-square-o
                                        span 编辑
                                    a.handle(ng-click="hotMajorFn.deletePrompt(major)")
                                        i.fa.fa-trash-o
                                        span 删除

                    .dt-toolbar-footer
                        .col-sm-6.col-xs-12.hidden-xs
                            #datatable_col_reorder_info.dataTables_info(role='status', aria-live='polite')
                                | 显示第
                                span.txt-color-darken {{((hotMajorFn.page.pageNumber==0?hotMajorFn.page.pageNumber+1:hotMajorFn.page.pageNumber)-1)*10+1}}
                                |  到
                                span.txt-color-darken {{((hotMajorFn.page.pageNumber==0?hotMajorFn.page.pageNumber+1:hotMajorFn.page.pageNumber)-1)*10+hotMajorFn.majorList.length}}
                                |  条 总共
                                span.text-primary {{hotMajorFn.page.totalElements}}
                                |  条记录
                        .col-sm-6.col-xs-12
                            #datatable_col_reorder_paginate.dataTables_paginate.paging_simple_numbers
                                ul.pagination-sm(uib-pagination, total-items='hotMajorFn.page.totalElements', max-size='hotMajorFn.page.pageSize' ng-model='hotMajorFn.page.pageNumber',ng-change="hotMajorFn.findMajorByPage()" boundary-link-numbers='true' rotate='false' previous-text="<" next-text=">")

    .jarviswidget.jarviswidget-color-blueDark(ng-if="hotMajorFn.isSetMajor")
        header(role='heading')
            span.widget-icon
                i.fa.fa-table
            h2 {{hotMajorFn.title}}
        .widget-body
            form.form-horizontal(name="majorForm")
                fieldset
                    legend {{hotMajorFn.prompt}}

                    .form-group
                        label.col-sm-3.control-label
                            span.required *
                            | 选择学院：
                        .col-sm-7
                            select.form-control(ng-model="hotMajorFn.collegeId" ui-select2="hotMajorFn.select2CollegeOptions()" )
                                option(ng-repeat="college in hotMajorFn.collegeDropList" value="{{college.id}}" selected="{{hotMajorFn.collegeId==college.id?'selected':''}}") {{college.name}}
                    .form-group
                        label.col-sm-3.control-label
                            span.required *
                            | 选择专业：
                        .col-sm-7
                            select.form-control(ng-model="hotMajorFn.majorId" ui-select2="hotMajorFn.select2MajorOptions()" )
                                option(ng-repeat="major in hotMajorFn.majorDropList" value="{{major.id}}" selected="{{hotMajorFn.majorId==major.id?'selected':''}}") {{major.name}}
                    .form-group
                        label.col-sm-3.control-label
                            span.required *
                            | 介绍：
                        .col-sm-7
                            textarea.introduce
                    .form-group
                        label.col-sm-3.control-label
                            span.required *
                            | 介绍图片：
                        .col-sm-7
                            img.introduce-image(ng-src="{{hotMajorFn.params.image || 'http://7xpscc.com1.z0.glb.clouddn.com/1494570366662'}}" ngf-select="hotMajorFn.selectFile($file)"  data-ngf-pattern='"image/jpg,image/jpeg,image/png"'  data-ngf-accept='"image/jpg,image/jpeg,image/png"'  data-ngf-max-size='1MB')
                    .form-group
                        label.col-sm-3.control-label
                            span.required *
                            |展示模板：
                        .col-sm-7
                           .col-sm-6
                               .view-template(ng-class="{true:'select-active'}[hotMajorFn.params.templateId==1]" ng-click="hotMajorFn.params.templateId=1")
                                   .media
                                       .media-left
                                           a(href='#')
                                               img.media-object.template-image(src="http://7xpscc.com1.z0.glb.clouddn.com/1494570228403")
                                       .media-body
                                           h4.media-heading 知新大学Web前端专业
                           .col-sm-6
                                .view-template(ng-class="{true:'select-active'}[hotMajorFn.params.templateId==2]" ng-click="hotMajorFn.params.templateId=2")
                                    .media
                                        .media-body
                                            h4.media-heading 知新大学Web前端专业
                                        .media-right
                                            a(href='#')
                                                img.media-object.template-image(src="http://7xpscc.com1.z0.glb.clouddn.com/1494570310980")
                .form-actions
                    .row
                        .col-md-12
                            a.btn.btn-primary(ng-click="hotMajorFn.submit()" validation-submit="majorForm") 提交
                            .speace-10
                            a.btn.btn-default(ng-click="hotMajorFn.setMajorToggle()") 取消
            // end widget content
        // end widget div
