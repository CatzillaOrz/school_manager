.college-list-container
    .jarviswidget.jarviswidget-color-blueDark.jarviswidget-sortable(ng-if="cSDFn.show==1")
        header(role='heading')
            .jarviswidget-ctrls(role='menu')
            span.widget-icon
                i.fa.fa-table
            h2 课程评分详情
            span.jarviswidget-loader
                i.fa.fa-refresh.fa-spin
        // widget div
        div(role='content')
            // widget edit box
            .jarviswidget-editbox
                // This area used as dropdown edit box
            // end widget edit box
            // widget content
            .widget-body.no-padding
                .dataTables_wrapper.form-inline.no-footer
                    .dt-toolbar
                        .col-xs-12
                            form.form-inline
                                .form-group.col-sm-4
                                    label 学期选择：
                                    .form-control.no-border {{cSDFn.params.semesterName}}
                                .form-group.col-sm-4
                                    label 课程名称：
                                    .form-control.no-border {{cSDFn.course[0].courseName}}
                                .form-group.col-sm-4
                                    label 选择编号：
                                    .form-control.no-border {{cSDFn.course[0].teachingClassCode}}
                                .form-group.col-sm-4
                                    label 授课教师：
                                    .form-control.no-border {{cSDFn.params.teacherName}}
                                .form-group.col-sm-4
                                    label 综合分数：
                                    .form-control.no-border {{cSDFn.params.averageScore}}
                    table.table.table-striped.table-bordered.table-hover.dataTable.no-footer(width='100%', role='grid', aria-describedby='datatable_col_reorder_info', style='width: 100%;')
                        thead
                            tr(role='row')
                                th.sorting_asc(data-hide='phone', tabindex='0', rowspan='1', colspan='1', aria-sort='ascending', aria-label='ID: activate to sort column descending', style='width: 35px;') 序号
                                th.expand.sorting(data-class='expand', tabindex='0', rowspan='1', colspan='1', aria-label='Name: activate to sort column ascending', style='width: 86px;') 课程
                                th.sorting(data-hide='phone', tabindex='0', rowspan='1', colspan='1', aria-label='Company: activate to sort column ascending', style='width: 195px;') 上课日期
                                th.sorting(data-hide='phone', tabindex='0',  rowspan='1', colspan='1', aria-label='Company: activate to sort column ascending', style='width: 195px;') 节数
                                th.sorting(data-hide='phone,tablet', tabindex='0', rowspan='1', colspan='1', aria-label='Date: activate to sort column ascending', style='width: 195px;') 教室
                                th.sorting(data-hide='phone,tablet', tabindex='0', rowspan='1', colspan='1', aria-label='Date: activate to sort column ascending', style='width: 195px;') 评教人数
                                th.sorting(data-hide='phone,tablet', tabindex='0', rowspan='1', colspan='1', aria-label='Date: activate to sort column ascending', style='width: 195px;') 5星
                                th.sorting(data-hide='phone,tablet', tabindex='0', rowspan='1', colspan='1', aria-label='Date: activate to sort column ascending', style='width: 195px;') 4星
                                th.sorting(data-hide='phone,tablet', tabindex='0', rowspan='1', colspan='1', aria-label='Date: activate to sort column ascending', style='width: 195px;') 3星
                                th.sorting(data-hide='phone,tablet', tabindex='0', rowspan='1', colspan='1', aria-label='Date: activate to sort column ascending', style='width: 195px;') 2星
                                th.sorting(data-hide='phone,tablet', tabindex='0', rowspan='1', colspan='1', aria-label='Date: activate to sort column ascending', style='width: 195px;') 1星
                                th.sorting(data-hide='phone,tablet', tabindex='0', rowspan='1', colspan='1', aria-label='Date: activate to sort column ascending', style='width: 195px;') 操作
                        tbody
                            tr.odd(role='row' ng-repeat="i in cSDFn.course" )
                                td.sorting_1 {{$index+1 + ((cSDFn.page.pageNumber==0?cSDFn.page.pageNumber+1:cSDFn.page.pageNumber)-1)*10}}
                                td.expand  {{i.courseName}}
                                td  {{i.teachDate}}
                                td(ng-model="cSDFn.pitch")  {{i.periodNo}}
                                td {{i.classroomName}}
                                td {{i.assessNum}}
                                td {{i.star5}}
                                td {{i.star4}}
                                td {{i.star3}}
                                td {{i.star2}}
                                td {{i.star1}}
                                td
                                    a.handle(ng-click="cSDFn.getDetailInfo(i.scheduleId)" )
                                        i.fa.fa-pencil-square-o
                                        span 查看

                    .dt-toolbar-footer
                        .col-sm-6.col-xs-12.hidden-xs
                            .dataTables_info(role='status', aria-live='polite')
                                | 显示第
                                span.txt-color-darken {{((cSDFn.page.pageNumber==0?cSDFn.page.pageNumber+1:cSDFn.page.pageNumber)-1)*10+1}}
                                |  到
                                span.txt-color-darken {{((cSDFn.page.pageNumber==0?cSDFn.page.pageNumber+1:cSDFn.page.pageNumber)-1)*10+cSDFn.course.length}}
                                |  条 总共
                                span.text-primary {{cSDFn.page.totalElements}}
                                |  条记录
                        .col-sm-6.col-xs-12
                            .dataTables_paginate.paging_simple_numbers
                                ul.pagination-sm(uib-pagination, total-items='cSDFn.page.totalElements', max-size='cSDFn.page.pageSize' ng-model='cSDFn.page.pageNumber',ng-change="cSDFn.findCsdByPage()" boundary-link-numbers='true' rotate='false' previous-text="<" next-text=">")

