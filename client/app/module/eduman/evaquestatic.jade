.college-list-container
    #wid-id-1.jarviswidget.jarviswidget-color-blueDark
        header(role='heading')
            .jarviswidget-ctrls(role='menu')
            span.widget-icon
                i.fa.fa-table
            h2 评教信息
            span.jarviswidget-loader
                i.fa.fa-refresh.fa-spin
        div(role='content')
            .widget-body
                .row
                    .col-sm-4
                        span 评教名称：
                        span {{evaQuesInfoFn.record.name}}
                .row
                    .col-sm-4
                        span 问卷总分：
                        span {{evaQuesInfoFn.record.allScore}}
                .row
                    .col-sm-4
                        span 截止时间：
                        span {{evaQuesInfoFn.record.endTime}}
    #wid-id-12.jarviswidget.jarviswidget-color-blueDark
        header(role='heading')
            .jarviswidget-ctrls(role='menu')
            span.widget-icon
                i.fa.fa-table
            h2 评教统计
            span.jarviswidget-loader
                i.fa.fa-refresh.fa-spin
        div(role='content')
            //.jarviswidget-editbox
            .widget-body.no-padding
                #wid-id-7.jarviswidget(data-widget-editbutton='false', data-widget-fullscreenbutton='false', data-widget-custombutton='false', data-widget-sortable='false', role='widget')
                    header(role='heading')
                        ul#myTab.nav.nav-tabs.pull-left.in
                            li.active(ng-click="distributeListFn.switchType('uncomplete')")
                                a(data-toggle='tab', href='#hr1', aria-expanded='true')
                                    i.fa.fa-lg.fa-calendar
                                    span.hidden-mobile.hidden-tablet  选择分配
                            li(ng-click="distributeListFn.switchType('complete')")
                                a(data-toggle='tab', href='#hr2', aria-expanded='false')
                                    i.fa.fa-lg.fa-clock-o
                                    span.hidden-mobile.hidden-tablet
                                        | 已分配
                                        //span.label.bg-color-blue.txt-color-white
                                            | label
                                            i.fa.fa-exclamation
                        span.jarviswidget-loader
                            i.fa.fa-refresh.fa-spin
                    // widget div
                    div(role='content')
                        // widget edit box
                        .jarviswidget-editbox
                            // This area used as dropdown edit box
                        // end widget edit box
                        // widget content
                        .widget-body
                            .tab-content
                                #hr1.tab-pane.active
                                    #wid-id-3.jarviswidget.jarviswidget-color-blueDark
                                        // widget div
                                        div(role='content')
                                            // widget edit box
                                            .jarviswidget-editbox
                                                // This area used as dropdown edit box
                                            // end widget edit box
                                            // widget content
