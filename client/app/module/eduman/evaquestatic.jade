.college-list-container
    #wid-id-1.jarviswidget.jarviswidget-color-blueDark.margin-bottom0-eduman
        header(role='heading')
            .jarviswidget-ctrls(role='menu')
            span.widget-icon
                i.fa.fa-table
            h2 评教信息
            span.jarviswidget-loader
                i.fa.fa-refresh.fa-spin
        div(role='content')
            .widget-body(style="min-height:auto!important")
                .row
                    .col-sm-3
                        span 课程名称：
                        span {{evaQueStaticFn.staticInfo.courseName}}
                    .col-sm-3
                        span 选课编号：
                        span {{evaQueStaticFn.staticInfo.teachingClassCode=='null' ? '--': evaQueStaticFn.staticInfo.teachingClassCode}}
                    .col-sm-3
                        span 授课教师：
                        span {{evaQueStaticFn.staticInfo.teacherName}}
                .row.padding-top-15
                    .col-sm-3
                        span 评教总人数：
                        span {{evaQueStaticFn.staticInfo.totalCount}}
                    .col-sm-3
                        span 已提交人数：
                        span {{evaQueStaticFn.staticInfo.assessCount}}
                    .col-sm-3
                        span 平均分：
                        span {{evaQueStaticFn.staticInfo.avageScore}}

    #wid-id-12.jarviswidget.jarviswidget-color-blueDark
        header(role='heading')
            .jarviswidget-ctrls(role='menu')
            span.widget-icon
                i.fa.fa-table
            h2 评教统计
            span.jarviswidget-loader
                i.fa.fa-refresh.fa-spin
        div(role='content')
            .widget-body
                #wid-id-7.jarviswidget(data-widget-editbutton='false', data-widget-fullscreenbutton='false', data-widget-custombutton='false', data-widget-sortable='false', role='widget')
                    header(role='heading')
                        ul#myTab.nav.nav-tabs.pull-left.in
                            li.active(ng-click="evaQueStaticFn.switchType('normal')")
                                a(data-toggle='tab', href='#hr1', aria-expanded='true' style="color:#333!important")
                                    i.fa.fa-lg.fa-calendar
                                    span.hidden-mobile.hidden-tablet  常规统计
                            li(ng-click="evaQueStaticFn.switchType('unnormal')")
                                a(data-toggle='tab', href='#hr2', aria-expanded='false' style="color:#333!important")
                                    i.fa.fa-lg.fa-clock-o
                                    span.hidden-mobile.hidden-tablet
                                        | 分题统计
                        span.jarviswidget-loader
                            i.fa.fa-refresh.fa-spin
                    // widget div
                    .tab-content.no-border
                        #hr1.tab-pane.active
                            #wid-id-3.jarviswidget.jarviswidget-color-blueDark
                                .widget-body.no-padding
                                    #datatable_col_reorder_wrapper.dataTables_wrapper.form-inline.no-footer
                                        table#datatable_col_reorder.table.table-striped.table-bordered.table-hover.dataTable.no-footer(width='100%', role='grid', aria-describedby='datatable_col_reorder_info', style='width: 100%;')
                                            thead
                                                tr(role='row')
                                                        th.sorting_asc(data-hide='phone', tabindex='0', aria-controls='datatable_col_reorder', rowspan='1', colspan='1', aria-sort='ascending', aria-label='ID: activate to sort column descending', style='width: 35px;') 序号
                                                        th.expand.sorting(data-class='expand', tabindex='0', aria-controls='datatable_col_reorder', rowspan='1', colspan='1', aria-label='Name: activate to sort column ascending', style='width: 150px;') 班级名称
                                                        th.sorting(data-hide='phone,tablet', tabindex='0', aria-controls='datatable_col_reorder', rowspan='1', colspan='1', aria-label='Zip: activate to sort column ascending', style='width: 80px;') 姓名
                                                        th.sorting(data-hide='phone,tablet', tabindex='0', aria-controls='datatable_col_reorder', rowspan='1', colspan='1', aria-label='City: activate to sort column ascending', style='width: 35px;') 评分
                                                        th.sorting(data-hide='phone,tablet', tabindex='0', aria-controls='datatable_col_reorder', rowspan='1', colspan='1', aria-label='City: activate to sort column ascending', style='width: 80px;') 提交日期
                                                        th.sorting(data-hide='phone,tablet', tabindex='0', aria-controls='datatable_col_reorder', rowspan='1', colspan='1', aria-label='City: activate to sort column ascending', style='width: 35px;') 操作
                                            tbody
                                                tr.odd(role='row' ng-repeat="record in evaQueStaticFn.records")
                                                    td.sorting_1 {{$index+1 + ((evaQueStaticFn.page.pageNumber==0?evaQueStaticFn.page.pageNumber+1:evaQueStaticFn.page.pageNumber)-1)*10}}
                                                    td {{record.classesName}}
                                                    td {{record.studentName}}
                                                    td {{record.score}}
                                                    td {{record.commitDate | date:'yyyy-MM-dd hh:mm:ss'}}
                                                    td
                                                        a.handle(ng-click="evaQueStaticFn.showQueInfo($index)")
                                                            i.fa.fa-pencil-square-o
                                                            span 查看详情

                                        .dt-toolbar-footer
                                            .col-sm-6.col-xs-12.hidden-xs
                                                #datatable_col_reorder_info.dataTables_info(role='status', aria-live='polite')
                                                    | 显示第
                                                    span.txt-color-darken {{((evaQueStaticFn.page.pageNumber==0?evaQueStaticFn.page.pageNumber+1:evaQueStaticFn.page.pageNumber)-1)*10+1}}
                                                    |  到
                                                    span.txt-color-darken {{((evaQueStaticFn.page.pageNumber==0?evaQueStaticFn.page.pageNumber+1:evaQueStaticFn.page.pageNumber)-1)*10+evaQueStaticFn.records.length}}
                                                    |  条 总共
                                                    span.text-primary {{evaQueStaticFn.page.totalElements}}
                                                    |  条记录
                                            .col-sm-6.col-xs-12
                                                #datatable_col_reorder_paginate.dataTables_paginate.paging_simple_numbers
                                                    ul.pagination-sm(uib-pagination, total-items='evaQueStaticFn.page.totalElements', max-size='evaQueStaticFn.page.pageSize' ng-model='evaQueStaticFn.page.pageNumber',ng-change="evaQueStaticFn.getEvaQuesNormalStatic()" boundary-link-numbers='true' rotate='false' previous-text="<" next-text=">")

                        #hr2.tab-pane
                            .row(role='row' ng-show="!evaQueStaticFn.records.data.length" style="text-align:center")  暂无学生答题

                            .row(role='row' ng-repeat="record in evaQueStaticFn.records")
                                .col-sm-12
                                    span {{'第'+ $index+1 +'题 '+record.questionName}}
                                .col-sm-12
                                    table#datatable_col_reorder1.table.table-striped.table-bordered.table-hover.dataTable.no-footer(width='100%', role='grid', aria-describedby='datatable_col_reorder_info', style='width: 100%;')
                                        thead
                                            tr(role='row')
                                                th.sorting_asc(data-hide='phone', tabindex='0', aria-controls='datatable_col_reorder', rowspan='1', colspan='1', aria-sort='ascending', aria-label='ID: activate to sort column descending', style='width: 35px;') 选项
                                                th.expand.sorting(data-class='expand', tabindex='0', aria-controls='datatable_col_reorder', rowspan='1', colspan='1', aria-label='Name: activate to sort column ascending', style='width: 150px;') 小计
                                                th.sorting(data-hide='phone,tablet', tabindex='0', aria-controls='datatable_col_reorder', rowspan='1', colspan='1', aria-label='Zip: activate to sort column ascending', style='width: 80px;') 比例
                                        tbody
                                            tr.odd(role='row' ng-repeat="ques in record.data")
                                                td {{ques.score+'分'}}
                                                td {{ques.count}}
                                                td {{ques.ration}}



    //-  添加学生弹出窗模版
    script(type='text/ng-template',id='queInfoDialog')
        .container-fluid
            .dialog-title
                h4 学生答题详情
            .dialog-body
                form.form-horizontal(role="form" name="form" novalidate)
                    .control-group
                        span.spanshow(style="margin-left:0px;") {{'评分：'+evaQueStaticFn.quePersonInfo.totalActualScore}}
                    .control-group(ng-repeat="que in evaQueStaticFn.quePersonInfo.questions")
                        .span12(style="margin-left:0")
                            span.spanshow(style="margin-left:0px;") {{$index+1}}、{{que.name}}&nbsp;({{'满分' + que.score + '分'}})
                        .span12(style="margin-left:0")
                            span.spanshow(style="margin-left:0px;color:red") {{'答题结果:'+(!que.actualScore ? '0分' : que.actualScore+'分')}}