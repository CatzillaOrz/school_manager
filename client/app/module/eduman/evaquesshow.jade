.college-list-container
    #wid-id-1.jarviswidget.jarviswidget-color-blueDark
        header(role='heading')
            .jarviswidget-ctrls(role='menu')
            span.widget-icon
                i.fa.fa-table
            h2 评教问卷信息
            span.jarviswidget-loader
                i.fa.fa-refresh.fa-spin
        div(role='content')
            .widget-body
                .row(style="margin-bottom:15px;")
                    .col-sm-4
                        span 评教名称：
                        span {{evaQuesInfoFn.record.name}}
                .row(style="margin-bottom:15px;")
                    .col-sm-4
                        span 问卷总分：
                        span {{evaQuesInfoFn.record.allScore}}
                .row(style="margin-bottom:15px;")
                    .col-sm-4
                        span 截止时间：
                        span {{evaQuesInfoFn.record.endTime}}
    #wid-id-2.jarviswidget.jarviswidget-color-blueDark
        header(role='heading')
            .jarviswidget-ctrls(role='menu')
            span.widget-icon
                i.fa.fa-table
            h2 评教题目
            span.jarviswidget-loader
                i.fa.fa-refresh.fa-spin
        div(role='content')
            .jarviswidget-editbox
            .widget-body.no-padding
                #datatable_col_reorder_wrapper.dataTables_wrapper.form-inline.no-footer
                    table#datatable_col_reorder.table.table-striped.table-bordered.table-hover.dataTable.no-footer(width='100%', role='grid', aria-describedby='datatable_col_reorder_info', style='width: 100%;')
                        thead
                            tr(role='row')
                                th.sorting_asc(data-hide='phone', tabindex='0', aria-controls='datatable_col_reorder', rowspan='1', colspan='1', aria-sort='ascending', aria-label='ID: activate to sort column descending', style='width: 35px;') 序号
                                th.expand.sorting(data-class='expand', tabindex='0', aria-controls='datatable_col_reorder', rowspan='1', colspan='1', aria-label='Name: activate to sort column ascending', style='width: 150px;') 题目
                                th.sorting(data-hide='phone,tablet', tabindex='0', aria-controls='datatable_col_reorder', rowspan='1', colspan='1', aria-label='Zip: activate to sort column ascending', style='width: 80px;') 分值
                        tbody
                            tr.odd(role='row' ng-repeat="record in evaQuesInfoFn.record.data")
                                td.sorting_1 {{$index+1}}
                                td {{record.name}}
                                td {{record.score}}
