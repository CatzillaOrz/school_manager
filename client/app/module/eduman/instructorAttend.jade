.college-list-container
    #wid-id-2.jarviswidget.jarviswidget-color-blueDark
        header(role='heading')
            .jarviswidget-ctrls(role='menu')
            span.widget-icon
                i.fa.fa-table
            h2 导员点名信息
            span.jarviswidget-loader
                i.fa.fa-refresh.fa-spin
        // widget div
        div(role='content')
            // widget edit box
            .jarviswidget-editbox
                // This area used as dropdown edit box
            // end widget edit box
            // widget content
            .widget-body.no-padding
                .dataTables_wrapper.form-inline.no-footer
                    .dt-toolbar
                        .col-xs-10
                            form.form-inline
                                .form-group.col-sm-3
                                    label 院系：
                                    select.select2.form-control(ng-model="insAttendFn.params.collegeId" ui-select2="insAttendFn.selectCollege2Options()" )
                                        option(value="") 全部
                                        option(ng-repeat="college in insAttendFn.collegeDropList" value="{{college.id}}" ) {{college.name}}
                                .form-group.col-sm-3
                                    label 导员：
                                    input.form-control(type='search', placeholder='请输入导员名称或工号',  ng-model="insAttendFn.params.teachingYear")
                                .form-group.col-sm-6
                                    label.control-label 时间段：
                                    .input-append.date.datepicker.datepicker-basic.no-padding.inline-block(data-date='', data-date-format='yyyy-mm-dd' b-datepicker)
                                        input.form-control(size='16', ng-disabled='true' name="dateStart" placeholder='请选择开始日期' type='text' ng-model="attendFixFn.params.startTime" validator="required")
                                        span.add-on
                                            i.icon-calendar.glyphicon.glyphicon-calendar

                                    .inline-block -
                                    .input-append.date.datepicker.datepicker-basic.no-padding.inline-block(data-date='', data-date-format='yyyy-mm-dd' b-datepicker)
                                        input.form-control(size='16', ng-disabled='true' name="dateStart" placeholder='请选择结束日期' type='text' ng-model="attendFixFn.params.endTime" validator="required")
                                        span.add-on
                                            i.icon-calendar.glyphicon.glyphicon-calendar
                        .col-sm-2.hidden-xs
                            .ColVis
                                button.btn.btn-primary(ng-click="insAttendFn.getClassList()")
                                    span 查询
                    table.table.table-striped.table-bordered.table-hover.dataTable.no-footer(width='100%', role='grid', aria-describedby='datatable_col_reorder_info', style='width: 100%;')
                        thead
                            tr(role='row')
                                th 序号
                                th 辅导员
                                th 工号
                                th 辅导员归属学院
                                th 被点名行政班
                                th 行政班年级
                                th 行政班学院
                                th 点名发起时间
                                th 总人数
                                th 已提交人数
                                th 未提交人数
                                th 请假人数
                        tbody
                            tr.odd(role='row' ng-repeat="class in insAttendFn.classList")
                                td.sorting_1 {{$index+1 + ((insAttendFn.page.pageNumber==0?insAttendFn.page.pageNumber+1:insAttendFn.page.pageNumber)-1)*10}}
                                td.expand(ng-if="insAttendFn.isUseAuth('href')")
                                    a.handle(ui-sref="classDetail({id:class.id})") {{class.name}}
                                td.expand(ng-if="!insAttendFn.isUseAuth('href')") {{class.name}}
                                td {{class.collegeName}}
                                td {{class.professionalName}}
                                td {{class.teachingYear}}
                                td {{class.teachers}}
                                td
                                    span(ng-if="class.schoolStatus==10") 在校
                                    span(ng-if="class.schoolStatus==20") 毕业
                                td {{class.inSchoolDate}}
                                td {{class.outSchoolDate }}
                                td
                                    a.handle(ui-sref="classEdit({id:class.id})")
                                        i.fa.fa-pencil-square-o
                                        span 编辑
                                    a.handle(ng-click="insAttendFn.deletePrompt(class)")
                                        i.fa.fa-trash-o
                                        span 删除

                    .dt-toolbar-footer
                        .col-sm-6.col-xs-12.hidden-xs
                            #datatable_col_reorder_info.dataTables_info(role='status', aria-live='polite')
                                | 显示第
                                span.txt-color-darken {{insAttendFn.page.pageNumber==0?insAttendFn.page.pageNumber*10:(insAttendFn.page.pageNumber-1)*10+1}}
                                |  到
                                span.txt-color-darken {{((insAttendFn.page.pageNumber==0?insAttendFn.page.pageNumber+1:insAttendFn.page.pageNumber)-1)*10+insAttendFn.classList.length}}
                                |  条 总共
                                span.text-primary {{insAttendFn.page.totalElements}}
                                |  条记录
                        .col-sm-6.col-xs-12
                            #datatable_col_reorder_paginate.dataTables_paginate.paging_simple_numbers
                                ul.pagination-sm(uib-pagination, total-items='insAttendFn.page.totalElements', max-size='insAttendFn.page.pageSize' ng-model='insAttendFn.page.pageNumber',ng-change="insAttendFn.findClassByPage()" boundary-link-numbers='true' rotate='false' previous-text="<" next-text=">")

