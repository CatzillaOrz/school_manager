.college-list-container
    .jarviswidget.jarviswidget-color-blueDark.jarviswidget-sortable(ng-if="attendDetailFn.show==1")
        header(role='heading')
            .jarviswidget-ctrls(role='menu')
            span.widget-icon
                i.fa.fa-table
            h2 教学班出勤率详情
            span.jarviswidget-loader
                i.fa.fa-refresh.fa-spin
        // widget div
        div(role='content')
            // widget edit box
            .jarviswidget-editbox
                // This area used as dropdown edit box
            // end widget edit box
            // widget content
            .widget-body.no-padding
                .dataTables_wrapper.form-inline.no-footer
                    .dt-toolbar
                        .col-xs-10
                            form.form-inline
                                .form-group.col-sm-3
                                    label 学期选择：
                                    .form-control.no-border 2017年第一学期
                                .form-group.col-sm-3
                                    label 课程名称：
                                    .form-control.no-border {{attendDetailFn.selected.courseName}}
                                .form-group.col-sm-3
                                    label 课程编号：
                                    .form-control.no-border {{attendDetailFn.selected.code}}
                                .form-group.col-sm-3
                                    label 授课教师：
                                    .form-control.no-border {{attendDetailFn.selected.teacherName}}

                        .col-sm-2.col-xs-6.hidden-xs
                            .ColVis
                                button.btn.btn-primary(ng-click="attendDetailFn.teachClassAttendInfoExport()")
                                    span 导出
                    table.table.table-striped.table-bordered.table-hover.dataTable.no-footer(width='100%', role='grid', aria-describedby='datatable_col_reorder_info', style='width: 100%;')
                        thead
                            tr(role='row')
                                th.sorting_asc(data-hide='phone', tabindex='0', rowspan='1', colspan='1', aria-sort='ascending', aria-label='ID: activate to sort column descending', style='width: 35px;') 序号
                                th.expand.sorting(data-class='expand', tabindex='0', rowspan='1', colspan='1', aria-label='Name: activate to sort column ascending', style='width: 86px;') 学号
                                th.sorting(data-hide='phone', tabindex='0', rowspan='1', colspan='1', aria-label='Company: activate to sort column ascending', style='width: 195px;') 姓名
                                th.sorting(data-hide='phone', tabindex='0',  rowspan='1', colspan='1', aria-label='Company: activate to sort column ascending', style='width: 195px;') 班级
                                th.sorting(data-hide='phone,tablet', tabindex='0', rowspan='1', colspan='1', aria-label='Date: activate to sort column ascending', style='width: 195px;') 已到
                                th.sorting(data-hide='phone,tablet', tabindex='0', rowspan='1', colspan='1', aria-label='Date: activate to sort column ascending', style='width: 195px;') 请假
                                th.sorting(data-hide='phone,tablet', tabindex='0', rowspan='1', colspan='1', aria-label='Date: activate to sort column ascending', style='width: 195px;') 旷课
                                th.sorting(data-hide='phone,tablet', tabindex='0', rowspan='1', colspan='1', aria-label='Date: activate to sort column ascending', style='width: 195px;') 迟到
                                th.sorting(data-hide='phone,tablet', tabindex='0', rowspan='1', colspan='1', aria-label='Date: activate to sort column ascending', style='width: 195px;') 早退
                        tbody
                            tr.odd(role='row' ng-repeat="stuAttend in attendDetailFn.teachClassStudentList")
                                td.sorting_1 {{$index+1 + ((attendDetailFn.page.pageNumber==0?attendDetailFn.page.pageNumber+1:attendDetailFn.page.pageNumber)-1)*10}}
                                td.expand {{stuAttend.studentId}}
                                td  {{stuAttend.studentName}}
                                td {{stuAttend.className}}
                                td  {{stuAttend.arrvied}}
                                td {{stuAttend.beg}}
                                td {{stuAttend.crunk}}
                                td {{stuAttend.late}}
                                td {{stuAttend.early}}


                    .dt-toolbar-footer
                        .col-sm-6.col-xs-12.hidden-xs
                            .dataTables_info(role='status', aria-live='polite')
                                | 显示第
                                span.txt-color-darken {{((attendDetailFn.page.pageNumber==0?attendDetailFn.page.pageNumber+1:attendDetailFn.page.pageNumber)-1)*10+1}}
                                |  到
                                span.txt-color-darken {{((attendDetailFn.page.pageNumber==0?attendDetailFn.page.pageNumber+1:attendDetailFn.page.pageNumber)-1)*10+attendDetailFn.majorList.length}}
                                |  条 总共
                                span.text-primary {{attendDetailFn.page.totalElements}}
                                |  条记录
                        .col-sm-6.col-xs-12
                            .dataTables_paginate.paging_simple_numbers
                                ul.pagination-sm(uib-pagination, total-items='attendDetailFn.page.totalElements', max-size='attendDetailFn.page.pageSize' ng-model='attendDetailFn.page.pageNumber',ng-change="attendDetailFn.getStudentAttendByTeachClassId()" boundary-link-numbers='true' rotate='false' previous-text="<" next-text=">")

