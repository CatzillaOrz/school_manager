.college-list-container
    #wid-id-2.tabBlock.jarviswidget.jarviswidget-color-blueDark.jarviswidget-sortable(d ata-widget-editbutton='false', style='', role='widget')
        header(role='heading')
            .jarviswidget-ctrls(role='menu')

            ul.tabBlock-tabs.nav.nav-tabs.pull-left.in
                li.tabBlock-tab.active.cursor-pointer(ng-click="teachDataFn.switchOneTab(1)")
                    a(data-toggle='tab' href='#hr1')
                        i.fa.fa-lg.fa-calendar
                        span.hidden-mobile.hidden-tablet  按院系统计数据
                li.tabBlock-tab.cursor-pointer(ng-click="teachDataFn.switchOneTab(2)")
                    a(data-toggle='tab' href='#hr2')
                        i.fa.fa-lg.fa-clock-o
                        span.hidden-mobile.hidden-tablet
                            | 按教学班统计数据
        // widget div
        div(role='content')
            .jarviswidget-editbox
            .widget-body.no-padding
                .tab-content
                    #hr1.tab-pane.active(ng-show='teachDataFn.tab == 1')
                        .tabbable.tabs-below
                            .tab-content
                                .no-padding
                                    .dataTables_wrapper.form-inline.no-footer
                                        .dt-toolbar.padding-bottom-10
                                            .col-xs-10
                                                form.form-inline
                                                    .form-group.col-sm-4
                                                        label.control-label 学期：
                                                        select#ddd.select2.form-control( ng-model="teachDataFn.params.semesterId" ui-select2="teachDataFn.select2SemesterOptions()" )
                                                                    optgroup(label="{{schoolYear.text}}" ng-repeat="schoolYear in teachDataFn.schoolYearDropList")
                                                                        option(value="{{semester.id}}" ng-repeat="semester in schoolYear.children" selected="{{teachDataFn.params.semesterId==semester.id?'selected':''}}") {{schoolYear.text+semester.text}}

                                            .col-sm-2.col-xs-6.hidden-xs
                                                .ColVis
                                                    button.btn.btn-primary(ng-click="teachDataFn.getTeachingclassAttendByTeacher()")
                                                        span 查询
                                                    button.btn.btn-primary(ng-click="teachDataFn.exportTeachingclassByTeacher()")
                                                        span 导出
                                        table.table.table-striped.table-bordered.table-hover.dataTable.no-footer(width='100%', role='grid', aria-describedby='datatable_col_reorder_info', style='width: 100%;')
                                            thead
                                                tr(role='row')
                                                    th 序号
                                                    th 院系
                                                    th 教师使用开卷人数
                                                    th 学生使用开卷人数
                                                    th 教师访问次数
                                                    th 学生访问次数

                                            tbody
                                                tr.odd(role='row' ng-repeat="attend in teachDataFn.attendList")
                                                    td.sorting_1 {{$index+1 + ((teachDataFn.page.pageNumber==0?teachDataFn.page.pageNumber+1:teachDataFn.page.pageNumber)-1)*10}}
                                                    td {{attend.collegeName}}
                                                    td {{attend.teacherJob}}
                                                    td {{attend.teacherName}}
                                                    td {{attend.total}}
                                                    td {{attend.normal}}
                                        .dt-toolbar-footer
                                            .col-sm-6.col-xs-12.hidden-xs
                                                .dataTables_info(role='status', aria-live='polite')
                                                    | 显示第
                                                    span.txt-color-darken {{teachDataFn.page.pageNumber==0?teachDataFn.page.pageNumber*10:(teachDataFn.page.pageNumber-1)*10+1}}
                                                    |  到
                                                    span.txt-color-darken {{((teachDataFn.page.pageNumber==0?teachDataFn.page.pageNumber+1:teachDataFn.page.pageNumber)-1)*10+teachDataFn.attendList.length}}
                                                    |  条 总共
                                                    span.text-primary {{teachDataFn.page.totalElements}}
                                                    |  条记录
                                            .col-sm-6.col-xs-12
                                                .dataTables_paginate.paging_simple_numbers
                                                    ul.pagination-sm(uib-pagination, total-items='teachDataFn.page.totalElements', max-size='teachDataFn.page.pageSize' ng-model='teachDataFn.page.pageNumber',ng-change="teachDataFn.getTeachingclassAttendByTeacher()" boundary-link-numbers='true' rotate='false' previous-text="<" next-text=">")
                    #hr2.tab-pane(ng-show='teachDataFn.tab == 2')
                        .tabbable.tabs-below
                            .tab-content
                                .no-padding
                                    .dataTables_wrapper.form-inline.no-footer
                                        .dt-toolbar.padding-bottom-10
                                            .col-xs-10
                                                .form-group.col-sm-3
                                                    label.control-label  学期：
                                                    input.form-control(type="text" ng-model="teachDataFn.params.teacherName" placeholder="请输入教师名称", my-enter="teachDataFn.getTeachingclassAttendByTeacher()" )

                                                .form-group.col-sm-3
                                                    label.control-label 院系：
                                                        select.select2.form-control(ng-model="teachDataFn.params.collegeId" ui-select2="teachDataFn.selectCollege2Options()" )
                                                            option(value="") 全部
                                                            option(ng-repeat="college in teachDataFn.collegeDropList" value="{{college.id}}" ) {{college.name}}

                                                .form-group.col-sm-3
                                                    label.control-label  课程：
                                                    input.form-control(type="text" ng-model="teachDataFn.params.teacherName" placeholder="请输入教师名称", my-enter="teachDataFn.getTeachingclassAttendByTeacher()" )

                                                .form-group.col-sm-3
                                                    label.control-label  教师：
                                                    input.form-control(type="text" ng-model="teachDataFn.params.teacherName" placeholder="请输入教师名称", my-enter="teachDataFn.getTeachingclassAttendByTeacher()" )

                                            .col-sm-2.col-xs-6.hidden-xs
                                                .ColVis
                                                    button.btn.btn-primary(ng-click="teachDataFn.getAttendanceByPeriod()")
                                                        span 查询
                                                    button.btn.btn-primary(ng-click="teachDataFn.exportClassAttendanceByPeriod()")
                                                        span 导出
                                        table.table.table-striped.table-bordered.table-hover.dataTable.no-footer(width='100%', role='grid', aria-describedby='datatable_col_reorder_info', style='width: 100%;')
                                            thead
                                                tr(role='row')
                                                    th 序号
                                                    th 院系
                                                    th 选课编号
                                                    th 课程名称
                                                    th 授课教师
                                                    th 学生数
                                                    th 教师访问次数
                                                    th 学生访问次数
                                                    th 课程章节数
                                                    th 上传课件材料
                                                    th 创建作业
                                                    th 发布作业
                                                    th 发布考试
                                            tbody
                                                tr.odd(role='row' ng-repeat="attend in teachDataFn.attendList")
                                                    td.sorting_1 {{$index+1 + ((teachDataFn.page.pageNumber==0?teachDataFn.page.pageNumber+1:teachDataFn.page.pageNumber)-1)*10}}
                                                    td {{attend.teachingClassesCode}}
                                                    td {{attend.courseName}}
                                                    td {{attend.teacherName}}
                                                    td {{attend.classRoom}}
                                                    td {{attend.teachDate}}
                                                    td {{attend.dayOfWeek}}
                                                    td {{attend.period}}
                                                    td {{attend.total}}
                                                    td {{attend.normal}}
                                                    td {{attend.later}}
                                                    td {{attend.askForLeave}}
                                                    td {{attend.truancy}}
                                        .dt-toolbar-footer
                                            .col-sm-6.col-xs-12.hidden-xs
                                                .dataTables_info(role='status', aria-live='polite')
                                                    | 显示第
                                                    span.txt-color-darken {{teachDataFn.page.pageNumber==0?teachDataFn.page.pageNumber*10:(teachDataFn.page.pageNumber-1)*10+1}}
                                                    |  到
                                                    span.txt-color-darken {{((teachDataFn.page.pageNumber==0?teachDataFn.page.pageNumber+1:teachDataFn.page.pageNumber)-1)*10+teachDataFn.attendList.length}}
                                                    |  条 总共
                                                    span.text-primary {{teachDataFn.page.totalElements}}
                                                    |  条记录
                                            .col-sm-6.col-xs-12
                                                .dataTables_paginate.paging_simple_numbers
                                                    ul.pagination-sm(uib-pagination, total-items='teachDataFn.page.totalElements', max-size='teachDataFn.page.pageSize' ng-model='teachDataFn.page.pageNumber',ng-change="teachDataFn.getAttendanceByPeriod()" boundary-link-numbers='true' rotate='false' previous-text="<" next-text=">")